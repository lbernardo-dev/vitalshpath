                    </section>

                    <section>
                        <h2
                            class="text-2xl font-bold text-gray-900 dark:text-white mb-4"
                        >
                            {t("legal.privacy.sections.minors.title")}
                        </h2>
                        <div
                            class="space-y-4"
                            set:html={t(
                                "legal.privacy.sections.minors.content"
                            )}
                        >
                        </div>
                    </section>

                    <section>
                        <h2
                            class="text-2xl font-bold text-gray-900 dark:text-white mb-4"
                        >
                            {t("legal.privacy.sections.changes.title")}

---
// OAuth callback page - redirects to admin
---

<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Autenticando...</title>
        <style>
            body {
                font-family: -apple-system, BlinkMacSystemFont, "Segoe UI",
                    Roboto, sans-serif;
                display: flex;
                align-items: center;
                justify-content: center;
                min-height: 100vh;
                margin: 0;
                background: #f9fafb;
            }
            .spinner {
                width: 40px;
                height: 40px;
                border: 3px solid #e5e7eb;
                border-top-color: #3b82f6;
                border-radius: 50%;
                animation: spin 1s linear infinite;
            }
            @keyframes spin {
                to {
                    transform: rotate(360deg);
                }
            }
        </style>
    </head>
    <body>
        <div class="spinner"></div>
        <div
            id="fallback"
            style="display: none; text-align: center; margin-top: 20px; font-family: sans-serif;"
        >
            <p>Si no eres redirigido, haz clic aquí:</p>
            <a
                id="redirect-link"
                href="#"
                style="color: #3b82f6; text-decoration: underline; font-weight: bold;"
                >Volver al panel de administración</a
            >
        </div>

        <script type="module">
            console.log("=== Auth Callback Debug ===");
            console.log("Full URL:", window.location.href);
            console.log("Pathname:", window.location.pathname);

            // Get session data from hash or search
            const authData = window.location.hash || window.location.search;
            console.log(
                "Auth data found:",
                authData ? "Yes (length " + authData.length + ")" : "No"
            );

            // Calculate admin path dynamically from current path
            // Current is something like /vitalshpath/admin/callback or /vitalshpath/admin/callback/
            let adminPath = window.location.pathname;

            // Standardize: remove trailing slash for calculation
            if (adminPath.endsWith("/")) {
                adminPath = adminPath.slice(0, -1);
            }

            // Remove 'callback' to get to parent 'admin'
            if (adminPath.endsWith("/callback")) {
                adminPath = adminPath.slice(0, -9);
            }

            // Ensure it ends with /
            if (!adminPath.endsWith("/")) {
                adminPath += "/";
            }

            const targetUrl = window.location.origin + adminPath + authData;

            console.log("Detected Admin Path:", adminPath);
            console.log("Final Target URL:", targetUrl);

            // Set fallback link
            const link = document.getElementById("redirect-link");
            if (link) link.href = targetUrl;

            // Show fallback after 3 seconds if redirect hasn't happened
            setTimeout(() => {
                const fallback = document.getElementById("fallback");
                if (fallback) fallback.style.display = "block";
                console.log("Fallback link displayed");
            }, 3000);

            // Perform redirect with a tiny delay to ensure everything is logged
            setTimeout(() => {
                console.log(
                    "Attempting redirect via window.location.replace..."
                );
                try {
                    window.location.replace(targetUrl);
                } catch (e) {
                    console.error("Redirect failed:", e);
                    window.location.href = targetUrl;
                }
            }, 500);
        </script>
    </body>
</html>

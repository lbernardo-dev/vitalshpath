<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Autenticando...</title>
        <style>
            body {
                font-family: -apple-system, BlinkMacSystemFont, "Segoe UI",
                    Roboto, sans-serif;
                display: flex;
                align-items: center;
                justify-content: center;
                min-height: 100vh;
                margin: 0;
                background: #f9fafb;
            }
            .spinner {
                width: 40px;
                height: 40px;
                border: 3px solid #e5e7eb;
                border-top-color: #3b82f6;
                border-radius: 50%;
                animation: spin 1s linear infinite;
            }
            @keyframes spin {
                to {
                    transform: rotate(360deg);
                }
            }
        </style>
    </head>
    <body>
        <div class="spinner"></div>
        <script type="module">
            // This page just renders and the main admin page handles the hash
            const base = (import.meta.env.BASE_URL || "").replace(/\/$/, "");
            const targetUrl = `${base}/admin/${window.location.hash}`;

            console.log("Sesi√≥n recibida, redireccionando a:", targetUrl);
            window.location.href = targetUrl;
        </script>
    </body>
</html>

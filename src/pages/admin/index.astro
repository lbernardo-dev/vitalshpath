---
import { GOOGLE_CLIENT_ID } from './config';

const baseUrl = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VitalsPath Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body { font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif; }
        .dark body { background: #0a0a0a; color: #fff; }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <div id="loading" class="flex items-center justify-center min-h-screen">
        <div class="text-center">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-500 mx-auto mb-4"></div>
            <p class="text-gray-600">Cargando...</p>
        </div>
    </div>

    <div id="login" class="hidden min-h-screen flex items-center justify-center p-4">
        <div class="bg-white rounded-2xl shadow-xl p-8 max-w-md w-full text-center">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-500 rounded-2xl flex items-center justify-center mx-auto mb-6">
                <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
            </div>
            <h1 class="text-2xl font-bold text-gray-900 mb-2">VitalsPath Admin</h1>
            <p class="text-gray-600 mb-8">Acceso restringido a administradores autorizados</p>
            <button id="google-login" class="w-full flex items-center justify-center gap-3 px-6 py-3 border border-gray-300 rounded-xl hover:bg-gray-50 transition-colors">
                <svg class="w-5 h-5" viewBox="0 0 24 24">
                    <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                    <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                    <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                    <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                </svg>
                <span class="font-medium text-gray-700">Continuar con Google</span>
            </button>
        </div>
    </div>

    <div id="unauthorized" class="hidden min-h-screen flex items-center justify-center p-4">
        <div class="bg-white rounded-2xl shadow-xl p-8 max-w-md w-full text-center">
            <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-8 h-8 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </div>
            <h1 class="text-2xl font-bold text-gray-900 mb-2">Acceso Denegado</h1>
            <p class="text-gray-600 mb-6">Tu email no está autorizado para acceder al panel de administración.</p>
            <button id="retry-login" class="px-6 py-3 bg-gray-100 rounded-xl hover:bg-gray-200 transition-colors">
                Intentar con otra cuenta
            </button>
        </div>
    </div>

    <div id="dashboard" class="hidden">
        <nav class="bg-white border-b border-gray-200 sticky top-0 z-50">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex items-center gap-4">
                        <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-500 rounded-xl flex items-center justify-center">
                            <span class="text-white font-bold">VP</span>
                        </div>
                        <h1 class="text-xl font-bold text-gray-900">VitalsPath Admin</h1>
                    </div>
                    <div class="flex items-center gap-4">
                        <div class="flex items-center gap-3">
                            <img id="user-avatar" src="" alt="" class="w-8 h-8 rounded-full">
                            <span id="user-name" class="text-sm font-medium text-gray-700"></span>
                        </div>
                        <button id="logout-btn" class="px-4 py-2 text-sm text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition-colors">
                            Cerrar sesión
                        </button>
                    </div>
                </div>
            </div>
        </nav>

        <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <!-- Stats Cards -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                    <div class="flex items-center justify-between mb-4">
                        <span class="text-sm text-gray-500">Total Suscriptores</span>
                        <div class="w-10 h-10 bg-blue-100 rounded-xl flex items-center justify-center">
                            <svg class="w-5 h-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                            </svg>
                        </div>
                    </div>
                    <p id="stat-total" class="text-3xl font-bold text-gray-900">0</p>
                    <p id="stat-today-signups" class="text-sm text-green-600 mt-1">+0 hoy</p>
                </div>

                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                    <div class="flex items-center justify-between mb-4">
                        <span class="text-sm text-gray-500">Visitantes Hoy</span>
                        <div class="w-10 h-10 bg-purple-100 rounded-xl flex items-center justify-center">
                            <svg class="w-5 h-5 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                        </div>
                    </div>
                    <p id="stat-visitors" class="text-3xl font-bold text-gray-900">0</p>
                    <p class="text-sm text-gray-500 mt-1">únicos</p>
                </div>

                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                    <div class="flex items-center justify-between mb-4">
                        <span class="text-sm text-gray-500">Online Ahora</span>
                        <div class="w-10 h-10 bg-green-100 rounded-xl flex items-center justify-center">
                            <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
                        </div>
                    </div>
                    <p id="stat-online" class="text-3xl font-bold text-gray-900">0</p>
                    <p class="text-sm text-gray-500 mt-1">visitantes activos</p>
                </div>

                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                    <div class="flex items-center justify-between mb-4">
                        <span class="text-sm text-gray-500">Conversión</span>
                        <div class="w-10 h-10 bg-orange-100 rounded-xl flex items-center justify-center">
                            <svg class="w-5 h-5 text-orange-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                            </svg>
                        </div>
                    </div>
                    <p id="stat-conversion" class="text-3xl font-bold text-gray-900">0%</p>
                    <p class="text-sm text-gray-500 mt-1">visitantes → suscriptores</p>
                </div>
            </div>

            <!-- Waitlist Table -->
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-100 flex items-center justify-between">
                    <h2 class="text-lg font-semibold text-gray-900">Lista de Espera</h2>
                    <button id="refresh-btn" class="px-4 py-2 text-sm text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition-colors flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                        </svg>
                        Actualizar
                    </button>
                </div>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Origen</th>
                            </tr>
                        </thead>
                        <tbody id="waitlist-body" class="bg-white divide-y divide-gray-200">
                            <tr>
                                <td colspan="3" class="px-6 py-12 text-center text-gray-500">
                                    Cargando...
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>

    <script type="module">
        import { 
            getGoogleAuthUrl, 
            handleCallback, 
            getSession, 
            logout, 
            isLoggedIn 
        } from './auth.ts';
        
        import { 
            getStats, 
            getSupabase 
        } from '../../lib/supabase/index.ts';
        
        // Elements
        const loadingEl = document.getElementById('loading');
        const loginEl = document.getElementById('login');
        const unauthorizedEl = document.getElementById('unauthorized');
        const dashboardEl = document.getElementById('dashboard');
        
        // Check for OAuth callback
        if (window.location.hash && window.location.hash.includes('access_token')) {
            const result = await handleCallback(window.location.hash);
            window.location.hash = '';
            
            if (result.success) {
                window.location.reload();
            } else {
                loadingEl?.classList.add('hidden');
                if (result.error === 'Unauthorized email') {
                    unauthorizedEl?.classList.remove('hidden');
                } else {
                    alert('Error: ' + result.error);
                    loginEl?.classList.remove('hidden');
                }
            }
        } else if (isLoggedIn()) {
            // Show dashboard
            loadingEl?.classList.add('hidden');
            dashboardEl?.classList.remove('hidden');
            
            const session = getSession();
            if (session) {
                const avatarEl = document.getElementById('user-avatar');
                const nameEl = document.getElementById('user-name');
                if (avatarEl) avatarEl.setAttribute('src', session.picture || '');
                if (nameEl) nameEl.textContent = session.name || session.email;
            }
            
            // Load stats
            await loadDashboard();
        } else {
            // Show login
            loadingEl?.classList.add('hidden');
            loginEl?.classList.remove('hidden');
        }
        
        // Login button
        document.getElementById('google-login')?.addEventListener('click', () => {
            window.location.href = getGoogleAuthUrl();
        });
        
        // Retry login
        document.getElementById('retry-login')?.addEventListener('click', () => {
            logout();
            window.location.reload();
        });
        
        // Logout button
        document.getElementById('logout-btn')?.addEventListener('click', () => {
            logout();
            window.location.href = `${import.meta.env.BASE_URL}/admin/`;
        });
        
        // Refresh button
        document.getElementById('refresh-btn')?.addEventListener('click', loadDashboard);
        
        // Load dashboard data
        async function loadDashboard() {
            const supabase = getSupabase();
            if (!supabase) return;
            
            try {
                // Get stats
                const { data: stats } = await supabase.rpc('get_stats');
                
                if (stats) {
                    const totalEl = document.getElementById('stat-total');
                    const todayEl = document.getElementById('stat-today-signups');
                    const visitorsEl = document.getElementById('stat-visitors');
                    const onlineEl = document.getElementById('stat-online');
                    const conversionEl = document.getElementById('stat-conversion');
                    
                    if (totalEl) totalEl.textContent = stats.total_signups || 0;
                    if (todayEl) todayEl.textContent = `+${stats.today_signups || 0} hoy`;
                    if (visitorsEl) visitorsEl.textContent = stats.today_visitors || 0;
                    if (onlineEl) onlineEl.textContent = stats.online_now || 0;
                    
                    const conversion = stats.today_visitors > 0 
                        ? ((stats.today_signups / stats.today_visitors) * 100).toFixed(1) 
                        : '0';
                    if (conversionEl) conversionEl.textContent = `${conversion}%`;
                }
                
                // Get waitlist
                const { data: waitlist } = await supabase
                    .from('waitlist')
                    .select('*')
                    .order('created_at', { ascending: false })
                    .limit(100);
                
                const tbody = document.getElementById('waitlist-body');
                if (tbody && waitlist && waitlist.length > 0) {
                    tbody.innerHTML = waitlist.map(item => `
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">${item.email}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${new Date(item.created_at).toLocaleString('es-ES')}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${item.source || 'landing'}</td>
                        </tr>
                    `).join('');
                } else if (tbody) {
                    tbody.innerHTML = '<tr><td colspan="3" class="px-6 py-12 text-center text-gray-500">No hay suscriptores aún</td></tr>';
                }
            } catch (error) {
                console.error('Error loading dashboard:', error);
            }
        }
        
        // Auto refresh every 30 seconds
        if (isLoggedIn()) {
            setInterval(loadDashboard, 30000);
        }
    </script>
</body>
</html>

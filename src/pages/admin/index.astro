---
import "../../styles/global.css";
const baseUrl = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>VitalsPath Admin</title>
    </head>
    <body class="bg-gray-50 min-h-screen">
        <div id="loading" class="flex items-center justify-center min-h-screen">
            <div class="text-center">
                <div
                    class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-500 mx-auto mb-4"
                >
                </div>
                <p class="text-gray-600">Cargando...</p>
            </div>
        </div>

        <div
            id="login"
            class="hidden min-h-screen flex items-center justify-center p-4"
        >
            <div
                class="bg-white rounded-2xl shadow-xl p-8 max-w-md w-full text-center"
            >
                <div
                    class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-500 rounded-2xl flex items-center justify-center mx-auto mb-6"
                >
                    <svg
                        class="w-8 h-8 text-white"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                        ></path>
                    </svg>
                </div>
                <h1 class="text-2xl font-bold text-gray-900 mb-2">
                    VitalsPath Admin
                </h1>
                <p class="text-gray-600 mb-8">Acceso restringido</p>
                <button
                    id="google-login"
                    class="w-full flex items-center justify-center gap-3 px-6 py-3 border border-gray-300 rounded-xl hover:bg-gray-50 transition-colors"
                >
                    <svg class="w-5 h-5" viewBox="0 0 24 24">
                        <path
                            fill="#4285F4"
                            d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                        ></path>
                        <path
                            fill="#34A853"
                            d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                        ></path>
                        <path
                            fill="#FBBC05"
                            d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                        ></path>
                        <path
                            fill="#EA4335"
                            d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                        ></path>
                    </svg>
                    <span class="font-medium text-gray-700"
                        >Continuar con Google</span
                    >
                </button>
            </div>
        </div>

        <div
            id="unauthorized"
            class="hidden min-h-screen flex items-center justify-center p-4"
        >
            <div
                class="bg-white rounded-2xl shadow-xl p-8 max-w-md w-full text-center"
            >
                <div
                    class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-6"
                >
                    <svg
                        class="w-8 h-8 text-red-500"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </div>
                <h1 class="text-2xl font-bold text-gray-900 mb-2">
                    Acceso Denegado
                </h1>
                <p class="text-gray-600 mb-6">Email no autorizado</p>
                <button
                    id="retry-login"
                    class="px-6 py-3 bg-gray-100 rounded-xl hover:bg-gray-200 transition-colors"
                    >Reintentar</button
                >
            </div>
        </div>

        <div id="dashboard" class="hidden">
            <nav class="bg-white border-b border-gray-200 sticky top-0 z-50">
                <div
                    class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center"
                >
                    <div class="flex items-center gap-3">
                        <div
                            class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-500 rounded-xl flex items-center justify-center"
                        >
                            <span class="text-white font-bold">VP</span>
                        </div>
                        <h1 class="text-xl font-bold text-gray-900">
                            VitalsPath Admin
                        </h1>
                    </div>
                    <div class="flex items-center gap-4">
                        <span
                            id="user-name"
                            class="text-sm font-medium text-gray-700"></span>
                        <button
                            id="logout-btn"
                            class="px-4 py-2 text-sm text-gray-600 hover:bg-gray-100 rounded-lg"
                            >Cerrar sesión</button
                        >
                    </div>
                </div>
            </nav>

            <main class="max-w-7xl mx-auto px-4 py-8">
                <div
                    class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-6 gap-6 mb-8"
                >
                    <div class="bg-white rounded-xl shadow-sm border p-6">
                        <span class="text-sm text-gray-500">Total Lista</span>
                        <p
                            id="stat-total"
                            class="text-2xl font-bold text-gray-900 mt-1"
                        >
                            0
                        </p>
                    </div>
                    <div class="bg-white rounded-xl shadow-sm border p-6">
                        <span class="text-sm text-gray-500">Hoy (Lista)</span>
                        <p
                            id="stat-today-signups"
                            class="text-2xl font-bold text-gray-900 mt-1"
                        >
                            +0
                        </p>
                    </div>
                    <div class="bg-white rounded-xl shadow-sm border p-6">
                        <span class="text-sm text-gray-500">Hoy (Visitas)</span>
                        <p
                            id="stat-today-visitors"
                            class="text-2xl font-bold text-gray-900 mt-1"
                        >
                            0
                        </p>
                    </div>
                    <div class="bg-white rounded-xl shadow-sm border p-6">
                        <span class="text-sm text-gray-500">Total Visitas</span>
                        <p
                            id="stat-total-visitors"
                            class="text-2xl font-bold text-gray-900 mt-1"
                        >
                            0
                        </p>
                    </div>
                    <div class="bg-white rounded-xl shadow-sm border p-6">
                        <span class="text-sm text-gray-500">Online</span>
                        <p
                            id="stat-online"
                            class="text-2xl font-bold text-gray-900 mt-1"
                        >
                            0
                        </p>
                    </div>
                    <div class="bg-white rounded-xl shadow-sm border p-6">
                        <span class="text-sm text-gray-500">Tiempo Medio</span>
                        <p
                            id="stat-avg-time"
                            class="text-2xl font-bold text-gray-900 mt-1"
                        >
                            0s
                        </p>
                    </div>
                </div>

                <!-- Tabs Navigation -->
                <div class="flex gap-4 mb-6 border-b">
                    <button
                        id="tab-waitlist"
                        class="px-4 py-2 border-b-2 border-blue-500 font-medium text-blue-600 transition-all"
                        >Lista de Espera</button
                    >
                    <button
                        id="tab-analytics"
                        class="px-4 py-2 border-b-2 border-transparent font-medium text-gray-500 hover:text-gray-700 transition-all"
                        >Analítica</button
                    >
                    <button
                        id="tab-pricing"
                        class="px-4 py-2 border-b-2 border-transparent font-medium text-gray-500 hover:text-gray-700 transition-all"
                        >Precios</button
                    >
                    <button
                        id="tab-surveys"
                        class="px-4 py-2 border-b-2 border-transparent font-medium text-gray-500 hover:text-gray-700 transition-all"
                        >Encuestas</button
                    >
                </div>

                <!-- Section: Waitlist -->
                <div
                    id="section-waitlist"
                    class="bg-white rounded-xl shadow-sm border overflow-hidden"
                >
                    <div
                        class="px-6 py-4 border-b flex justify-between items-center"
                    >
                        <h2 class="font-semibold text-gray-900">
                            Registros Recientes
                        </h2>
                        <button
                            id="refresh-btn"
                            class="px-4 py-2 text-sm text-gray-600 hover:bg-gray-100 rounded-lg"
                            >Actualizar</button
                        >
                    </div>
                    <table class="min-w-full">
                        <thead class="bg-gray-50">
                            <tr>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase"
                                    >Email</th
                                >
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase"
                                    >Fecha</th
                                >
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase"
                                    >Origen</th
                                >
                            </tr>
                        </thead>
                        <tbody id="waitlist-body" class="divide-y">
                            <tr
                                ><td
                                    colspan="3"
                                    class="px-6 py-12 text-center text-gray-500"
                                    >Cargando...</td
                                >
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Section: Analytics -->
                <div id="section-analytics" class="hidden space-y-8">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        <!-- Top Languages -->
                        <div class="bg-white rounded-xl shadow-sm border p-6">
                            <h3 class="font-bold text-gray-900 mb-4">
                                Idiomas más usados
                            </h3>
                            <div id="analytics-langs" class="space-y-4">
                                <p class="text-gray-500 text-sm">
                                    Cargando datos...
                                </p>
                            </div>
                        </div>
                        <!-- Top Pages -->
                        <div class="bg-white rounded-xl shadow-sm border p-6">
                            <h3 class="font-bold text-gray-900 mb-4">
                                Páginas más vistas
                            </h3>
                            <div id="analytics-pages" class="space-y-4">
                                <p class="text-gray-500 text-sm">
                                    Cargando datos...
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Daily History Table -->
                    <div
                        class="bg-white rounded-xl shadow-sm border overflow-hidden"
                    >
                        <div class="px-6 py-4 border-b">
                            <h3 class="font-bold text-gray-900">
                                Historial (Últimos 7 días)
                            </h3>
                        </div>
                        <table class="min-w-full">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th
                                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase"
                                        >Fecha</th
                                    >
                                    <th
                                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase"
                                        >Visitas Únicas</th
                                    >
                                    <th
                                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase"
                                        >Páginas Vistas</th
                                    >
                                    <th
                                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase"
                                        >Nuevos Leads</th
                                    >
                                </tr>
                            </thead>
                            <tbody
                                id="analytics-history-body"
                                class="divide-y text-sm"
                            >
                                <tr
                                    ><td
                                        colspan="4"
                                        class="px-6 py-12 text-center text-gray-500"
                                        >Cargando...</td
                                    >
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Section: Pricing Management -->
                <div id="section-pricing" class="hidden space-y-8">
                    <div
                        class="grid md:grid-cols-2 gap-8"
                        id="pricing-editor-container"
                    >
                        <p class="text-gray-500">Cargando planes...</p>
                    </div>
                </div>

                <!-- Section: Surveys -->
                <div id="section-surveys" class="hidden space-y-8">
                    <div class="bg-white rounded-xl shadow-sm border p-6">
                        <h3 class="font-bold text-gray-900 mb-4">
                            Crear Nueva Encuesta
                        </h3>
                        <div class="space-y-4 max-w-lg">
                            <div>
                                <label
                                    class="block text-sm font-medium text-gray-700 mb-1"
                                    >Pregunta</label
                                >
                                <input
                                    type="text"
                                    id="survey-question"
                                    class="w-full px-4 py-2 border rounded-lg"
                                    placeholder="¿Qué te parece la landing?"
                                />
                            </div>
                            <div>
                                <label
                                    class="block text-sm font-medium text-gray-700 mb-1"
                                    >Opciones (separadas por comas)</label
                                >
                                <input
                                    type="text"
                                    id="survey-options"
                                    class="w-full px-4 py-2 border rounded-lg"
                                    placeholder="Genial, Normal, Mejorable"
                                />
                            </div>
                            <button
                                id="create-survey-btn"
                                class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
                                >Publicar Encuesta</button
                            >
                        </div>
                    </div>

                    <div
                        id="active-survey-results"
                        class="bg-white rounded-xl shadow-sm border p-6"
                    >
                        <h3 class="font-bold text-gray-900 mb-4">
                            Resultados Encuesta Activa
                        </h3>
                        <div id="survey-display" class="space-y-4">
                            <p class="text-gray-500">
                                No hay encuestas activas
                            </p>
                        </div>
                    </div>
                </div>
            </main>
        </div>

        <script>
            import { getSupabase } from "../../lib/supabase";

            var ADMIN_EMAILS = [
                "lbernardo.dev@gmail.com",
                "yilianbs@gmail.com",
            ];

            // Get base URL for redirects
            const baseUrl =
                import.meta.env.BASE_URL === "/"
                    ? ""
                    : import.meta.env.BASE_URL;

            const supabase = getSupabase();

            function show(id) {
                const el = document.getElementById(id);
                if (el) el.classList.remove("hidden");
            }
            function hide(id) {
                const el = document.getElementById(id);
                if (el) el.classList.add("hidden");
            }

            function loadDashboard() {
                if (!supabase) return;

                // Core Stats
                supabase.rpc("get_stats").then(function (result) {
                    if (result.data) {
                        const data = result.data;
                        document.getElementById("stat-total").textContent =
                            data.total_signups || 0;
                        document.getElementById(
                            "stat-today-signups"
                        ).textContent = "+" + (data.today_signups || 0);
                        document.getElementById(
                            "stat-today-visitors"
                        ).textContent = data.today_visitors || 0;
                        document.getElementById(
                            "stat-total-visitors"
                        ).textContent = data.total_visitors || 0;
                        document.getElementById("stat-online").textContent =
                            data.online_now || 0;

                        if (data.avg_duration_seconds !== undefined) {
                            const secs = Math.round(data.avg_duration_seconds);
                            const el = document.getElementById("stat-avg-time");
                            if (secs < 60) {
                                el.textContent = `${secs}s`;
                            } else {
                                const mins = Math.floor(secs / 60);
                                const remSecs = secs % 60;
                                el.textContent =
                                    remSecs > 0
                                        ? `${mins}m ${remSecs}s`
                                        : `${mins}m`;
                            }
                        }
                    }
                });

                // Deep Analytics
                supabase.rpc("get_admin_analytics").then(function (result) {
                    if (result.data) {
                        const data = result.data;

                        // Render Langs
                        const langsEl =
                            document.getElementById("analytics-langs");
                        langsEl.innerHTML =
                            data.top_languages
                                .map(
                                    (l) => `
                            <div>
                                <div class="flex justify-between text-sm mb-1">
                                    <span class="font-medium text-gray-700">${l.lang.toUpperCase()}</span>
                                    <span class="text-gray-500">${
                                        l.count
                                    } vistas</span>
                                </div>
                                <div class="w-full bg-gray-100 rounded-full h-2">
                                    <div class="bg-blue-500 h-2 rounded-full" style="width: ${Math.min(
                                        100,
                                        (l.count /
                                            data.top_languages[0].count) *
                                            100
                                    )}%"></div>
                                </div>
                            </div>
                        `
                                )
                                .join("") ||
                            '<p class="text-gray-500 text-sm">Sin datos</p>';

                        // Render Pages
                        const pagesEl =
                            document.getElementById("analytics-pages");
                        pagesEl.innerHTML =
                            data.top_pages
                                .map(
                                    (p) => `
                            <div>
                                <div class="flex justify-between text-sm mb-1">
                                    <span class="font-medium text-gray-700 truncate mr-2">${
                                        p.page
                                    }</span>
                                    <span class="text-gray-500">${
                                        p.count
                                    }</span>
                                </div>
                                <div class="w-full bg-gray-100 rounded-full h-2">
                                    <div class="bg-purple-500 h-2 rounded-full" style="width: ${Math.min(
                                        100,
                                        (p.count / data.top_pages[0].count) *
                                            100
                                    )}%"></div>
                                </div>
                            </div>
                        `
                                )
                                .join("") ||
                            '<p class="text-gray-500 text-sm">Sin datos</p>';

                        // Render History
                        const historyBody = document.getElementById(
                            "analytics-history-body"
                        );
                        historyBody.innerHTML = data.history
                            .map(
                                (h) => `
                            <tr>
                                <td class="px-6 py-4 font-medium text-gray-900">${h.date}</td>
                                <td class="px-6 py-4 text-gray-600">${h.unique_visitors}</td>
                                <td class="px-6 py-4 text-gray-600">${h.page_views}</td>
                                <td class="px-6 py-4 text-blue-600 font-bold">${h.signups}</td>
                            </tr>
                        `
                            )
                            .join("");

                        // Render Survey
                        const surveyEl =
                            document.getElementById("survey-display");
                        if (data.active_survey) {
                            const totalVotes = (
                                data.active_survey.results || []
                            ).reduce((acc, curr) => acc + curr.votes, 0);
                            surveyEl.innerHTML = `
                                <div class="space-y-6">
                                    <h4 class="text-2xl font-black text-gray-900 leading-tight">${
                                        data.active_survey.question
                                    }</h4>
                                    <p class="text-sm text-gray-400 font-bold uppercase tracking-widest">${totalVotes} votos registrados</p>
                                    <button id="close-survey-btn" class="px-6 py-3 bg-red-50 text-red-600 font-bold rounded-xl hover:bg-red-100 transition-all text-sm border border-red-100">Cerrar Encuesta</button>
                                </div>
                                <div class="space-y-5 bg-gray-50 p-6 rounded-2xl border border-gray-100">
                                    ${(data.active_survey.options || [])
                                        .map((opt) => {
                                            const r = (
                                                data.active_survey.results || []
                                            ).find(
                                                (res) =>
                                                    res.selected_option === opt
                                            ) || { votes: 0 };
                                            const pct =
                                                totalVotes > 0
                                                    ? Math.round(
                                                          (r.votes /
                                                              totalVotes) *
                                                              100
                                                      )
                                                    : 0;
                                            return `
                                            <div>
                                                <div class="flex justify-between text-sm mb-2">
                                                    <span class="font-bold text-gray-700">${opt}</span>
                                                    <span class="font-black text-blue-600">${r.votes} votos (${pct}%)</span>
                                                </div>
                                                <div class="w-full bg-white rounded-full h-3 border border-gray-100 overflow-hidden">
                                                    <div class="bg-gradient-to-r from-blue-500 to-indigo-600 h-full transition-all duration-1000" style="width: ${pct}%"></div>
                                                </div>
                                            </div>
                                        `;
                                        })
                                        .join("")}
                                </div>
                            `;
                        } else {
                            surveyEl.innerHTML =
                                '<p class="text-gray-500 italic">No hay una encuesta activa.</p>';
                        }

                        // Render Pricing
                        const pricingEl = document.getElementById(
                            "pricing-editor-container"
                        );
                        pricingEl.innerHTML = (data.pricing || [])
                            .filter((p) => p.id !== "free") // Only premium plans for now
                            .map((p) => {
                                const labels = {
                                    premium_monthly: "Premium Mensual",
                                    premium_annual: "Premium Anual",
                                    premium_lifetime:
                                        "Premium De Por Vida (Lifetime)",
                                };
                                const label = labels[p.id] || p.id;

                                return `
                            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8 hover:shadow-md transition-all">
                                <div class="flex items-center justify-between mb-6">
                                    <h4 class="text-lg font-black text-gray-900 uppercase tracking-tighter">${label}</h4>
                                    <span class="px-3 py-1 bg-blue-100 text-blue-600 rounded-full text-[10px] font-black uppercase tracking-widest">${
                                        p.id.split("_")[1] || ""
                                    }</span>
                                </div>
                                <div class="space-y-6">
                                    <div class="space-y-2">
                                        <label class="text-[10px] font-black text-gray-400 uppercase tracking-widest">Precio Base (${
                                            p.currency
                                        })</label>
                                        <input type="number" step="0.01" class="pricing-base w-full px-4 py-3 bg-gray-50 border-none rounded-xl font-bold text-xl" data-id="${
                                            p.id
                                        }" value="${p.base_price}">
                                    </div>
                                    <div class="space-y-2">
                                        <label class="text-[10px] font-black text-gray-400 uppercase tracking-widest">Descuento (%)</label>
                                        <input type="number" class="pricing-discount w-full px-4 py-3 bg-gray-50 border-none rounded-xl font-bold text-xl" data-id="${
                                            p.id
                                        }" value="${p.discount_percentage}">
                                    </div>
                                    <div class="pt-4 flex items-center justify-between border-t border-gray-50 mt-4">
                                        <div class="text-xs font-bold text-gray-500 uppercase tracking-wider">Final: <span class="text-blue-600 font-black text-lg">${
                                            p.currency
                                        }${(
                                    p.base_price *
                                    (1 - p.discount_percentage / 100)
                                ).toFixed(2)}</span></div>
                                        <button class="save-pricing-btn px-6 py-2 bg-gray-900 text-white text-xs font-black rounded-lg hover:bg-blue-600 transition-colors" data-id="${
                                            p.id
                                        }">Guardar</button>
                                    </div>
                                </div>
                            </div>
                        `;
                            })
                            .join("");
                    }
                });

                supabase
                    .from("waitlist")
                    .select("*")
                    .order("created_at", { ascending: false })
                    .limit(50)
                    .then(function (result) {
                        var tbody = document.getElementById("waitlist-body");
                        if (!tbody) return;

                        if (result.data && result.data.length > 0) {
                            var html = "";
                            result.data.forEach(function (item) {
                                html +=
                                    '<tr class="hover:bg-gray-50"><td class="px-6 py-4 text-sm text-gray-900">' +
                                    item.email +
                                    '</td><td class="px-6 py-4 text-sm text-gray-500">' +
                                    new Date(item.created_at).toLocaleString(
                                        "es-ES"
                                    ) +
                                    '</td><td class="px-6 py-4 text-sm text-gray-500">' +
                                    (item.source || "landing") +
                                    "</td></tr>";
                            });
                            tbody.innerHTML = html;
                        } else {
                            tbody.innerHTML =
                                '<tr><td colspan="3" class="px-6 py-12 text-center text-gray-500">Sin datos</td></tr>';
                        }
                    });
            }

            async function init() {
                console.log("Iniciando administración...");
                if (!supabase) {
                    console.error("Supabase no está configurado");
                    hide("loading");
                    alert("Supabase not configured");
                    return;
                }

                console.log("Verificando sesión actual...");
                var {
                    data: { session },
                    error: sessionError,
                } = await supabase.auth.getSession();

                if (sessionError) {
                    console.error(
                        "Error al obtener sesión:",
                        sessionError.message
                    );
                }

                if (session && session.user) {
                    console.log("Sesión encontrada para:", session.user.email);
                    if (
                        ADMIN_EMAILS.includes(session.user.email.toLowerCase())
                    ) {
                        console.log("Acceso autorizado");
                        hide("loading");
                        hide("login");
                        show("dashboard");
                        const nameEl = document.getElementById("user-name");
                        if (nameEl) nameEl.textContent = session.user.email;
                        loadDashboard();
                    } else {
                        console.warn(
                            "Email no autorizado:",
                            session.user.email
                        );
                        hide("loading");
                        hide("login");
                        show("unauthorized");
                    }
                } else {
                    console.log("No hay sesión activa");
                    // If we are coming back from callback, the hash might be handled by onAuthStateChange
                    // Still hidden logout/login if loading is visible
                    setTimeout(() => {
                        const loadingVisible = !document
                            .getElementById("loading")
                            ?.classList.contains("hidden");
                        if (loadingVisible) {
                            console.log("Mostrando pantalla de login");
                            hide("loading");
                            show("login");
                        }
                    }, 2000); // Give it a bit more time for onAuthStateChange to fire
                }

                supabase.auth.onAuthStateChange(function (event, session) {
                    console.log(
                        "Auth State Change:",
                        event,
                        session?.user?.email
                    );
                    if (
                        (event === "SIGNED_IN" || event === "USER_UPDATED") &&
                        session
                    ) {
                        if (
                            ADMIN_EMAILS.includes(
                                session.user.email.toLowerCase()
                            )
                        ) {
                            console.log("Acceso autorizado vía evento");
                            hide("loading");
                            hide("login");
                            hide("unauthorized");
                            show("dashboard");
                            const nameEl = document.getElementById("user-name");
                            if (nameEl) nameEl.textContent = session.user.email;
                            loadDashboard();
                        } else {
                            console.warn(
                                "Email no autorizado vía evento:",
                                session.user.email
                            );
                            hide("loading");
                            hide("login");
                            show("unauthorized");
                        }
                    } else if (event === "SIGNED_OUT") {
                        console.log("Sesión cerrada");
                        hide("dashboard");
                        show("login");
                    }
                });
            }

            document
                .getElementById("google-login")
                ?.addEventListener("click", async function () {
                    if (!supabase) return;

                    // Construct explicit redirect URL
                    const origin = window.location.origin;
                    const path = window.location.pathname.replace(/\/$/, "");
                    const redirectUrl = origin + path + "/callback";

                    console.log("Iniciando login con Google...");
                    console.log("URL de redirección:", redirectUrl);

                    const { error } = await supabase.auth.signInWithOAuth({
                        provider: "google",
                        options: {
                            redirectTo: redirectUrl,
                            queryParams: {
                                prompt: "consent select_account",
                            },
                        },
                    });

                    if (error) {
                        console.error(
                            "Error al iniciar sesión:",
                            error.message
                        );
                        alert("Error al iniciar sesión: " + error.message);
                    }
                });

            document
                .getElementById("retry-login")
                ?.addEventListener("click", async function () {
                    if (!supabase) return;
                    await supabase.auth.signOut();
                    window.location.reload();
                });

            document
                .getElementById("logout-btn")
                ?.addEventListener("click", async function () {
                    if (!supabase) return;
                    await supabase.auth.signOut();
                    window.location.reload();
                });

            // Tab switching logic
            function setupTabs() {
                const tabs = ["waitlist", "analytics", "pricing", "surveys"];
                tabs.forEach((tab) => {
                    document
                        .getElementById(`tab-${tab}`)
                        ?.addEventListener("click", () => {
                            tabs.forEach((t) => {
                                document
                                    .getElementById(`tab-${t}`)
                                    .classList.remove(
                                        "border-blue-500",
                                        "text-blue-600"
                                    );
                                document
                                    .getElementById(`tab-${t}`)
                                    .classList.add(
                                        "border-transparent",
                                        "text-gray-500"
                                    );
                                document
                                    .getElementById(`section-${t}`)
                                    .classList.add("hidden");
                            });
                            document
                                .getElementById(`tab-${tab}`)
                                .classList.add(
                                    "border-blue-500",
                                    "text-blue-600"
                                );
                            document
                                .getElementById(`tab-${tab}`)
                                .classList.remove(
                                    "border-transparent",
                                    "text-gray-500"
                                );
                            document
                                .getElementById(`section-${tab}`)
                                .classList.remove("hidden");
                        });
                });
            }

            // Pricing Management
            function setupPricing() {
                document.addEventListener("click", async (e) => {
                    if (
                        e.target &&
                        e.target.classList.contains("save-pricing-btn")
                    ) {
                        const id = e.target.getAttribute("data-id");
                        const card = e.target.closest("div.bg-white");
                        const base = parseFloat(
                            card.querySelector(".pricing-base").value
                        );
                        const discount = parseFloat(
                            card.querySelector(".pricing-discount").value
                        );

                        const { error } = await supabase
                            .from("pricing_plans")
                            .update({
                                base_price: base,
                                discount_percentage: discount,
                                updated_at: new Date().toISOString(),
                            })
                            .eq("id", id);

                        if (error) alert("Error: " + error.message);
                        else {
                            e.target.textContent = "¡Guardado!";
                            setTimeout(() => {
                                e.target.textContent = "Guardar";
                                loadDashboard();
                            }, 2000);
                        }
                    }
                });
            }

            // Survey Management
            async function setupSurveys() {
                document
                    .getElementById("create-survey-btn")
                    ?.addEventListener("click", async () => {
                        const question =
                            document.getElementById("survey-question").value;
                        const optionsRaw =
                            document.getElementById("survey-options").value;

                        if (!question || !optionsRaw) {
                            alert("Por favor rellena ambos campos");
                            return;
                        }

                        const options = optionsRaw
                            .split(",")
                            .map((o) => o.trim())
                            .filter((o) => o !== "");

                        // First deactivate all existing surveys
                        await supabase
                            .from("surveys")
                            .update({ is_active: false })
                            .eq("is_active", true);

                        // Create new
                        const { error } = await supabase
                            .from("surveys")
                            .insert({
                                question,
                                options,
                                is_active: true,
                            });

                        if (error) alert("Error: " + error.message);
                        else {
                            alert("Encuesta publicada con éxito");
                            window.location.reload();
                        }
                    });

                document.addEventListener("click", async (e) => {
                    if (e.target && e.target.id === "close-survey-btn") {
                        if (
                            confirm(
                                "¿Seguro que quieres cerrar la encuesta activa?"
                            )
                        ) {
                            await supabase
                                .from("surveys")
                                .update({ is_active: false })
                                .eq("is_active", true);
                            window.location.reload();
                        }
                    }
                });
            }

            setupTabs();
            setupPricing();
            setupSurveys();
            init();
        </script>
    </body>

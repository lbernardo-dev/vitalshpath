---
import { Image } from "astro:assets";
import ThemeToggle from "./ThemeToggle.astro";
import LanguageSelector from "./LanguageSelector.astro";
import appIcon from "../assets/images/Icon.png";
import { type Lang } from "../i18n/ui-locales";
import { useTranslations } from "../i18n";

interface Props {
    lang: Lang;
    isLanding?: boolean;
}

const { lang, isLanding = false } = Astro.props;
const t = useTranslations(lang);
const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, "");
---

<nav
    class="fixed top-0 left-0 right-0 z-50 bg-white/80 dark:bg-gray-900/80 backdrop-blur-xl border-b border-gray-200 dark:border-gray-800"
>
    <div class="container mx-auto px-4 md:px-6 py-3 md:py-4">
        <div class="flex items-center justify-between">
            <a
                href={`${baseUrl}/${lang}/`}
                class="flex items-center gap-2 flex-shrink-0"
            >
                <Image
                    src={appIcon}
                    alt="VitalsPath"
                    class="w-8 h-8 rounded-xl"
                    width={32}
                    height={32}
                />
                <span
                    class="text-lg font-bold text-gray-900 dark:text-white hidden sm:block"
                    >VitalsPath</span
                >
            </a>

            <div class="hidden md:flex items-center gap-8">
                {
                    isLanding ? (
                        <>
                            <a
                                href="#features"
                                class="text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
                            >
                                {t("nav.features")}
                            </a>
                            <a
                                href="#benefits"
                                class="text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
                            >
                                {t("nav.benefits")}
                            </a>
                            <a
                                href="#gallery"
                                class="text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
                            >
                                {t("nav.gallery")}
                            </a>
                            <a
                                href="#pricing"
                                class="text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
                            >
                                {t("pricing.title")}
                            </a>
                        </>
                    ) : (
                        <>
                            <a
                                href={`${baseUrl}/${lang}/#features`}
                                class="text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
                            >
                                {t("nav.features")}
                            </a>
                            <a
                                href={`${baseUrl}/${lang}/#benefits`}
                                class="text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
                            >
                                {t("nav.benefits")}
                            </a>
                            <a
                                href={`${baseUrl}/${lang}/#gallery`}
                                class="text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
                            >
                                {t("nav.gallery")}
                            </a>
                        </>
                    )
                }
            </div>

            <div class="flex items-center gap-2 md:gap-3">
                <LanguageSelector lang={lang} />
                <ThemeToggle />
                <a
                    href={isLanding
                        ? "#waitlist"
                        : `${baseUrl}/${lang}/#waitlist`}
                    class="px-3 py-2 md:px-5 md:py-2.5 bg-gray-900 dark:bg-white text-white dark:text-gray-900 text-sm font-medium rounded-xl hover:opacity-90 transition-all flex items-center justify-center"
                    aria-label={t("nav.waitlist")}
                >
                    <span class="sm:hidden">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="lucide lucide-sparkles"
                            ><path
                                d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z"
                            ></path>
                        </svg>
                    </span>
                    <span class="hidden sm:inline">{t("nav.waitlist")}</span>
                </a>
            </div>
        </div>
    </div>
</nav>

---
import { ArrowRight, Mail } from "lucide-react";
import { useTranslations } from "../../i18n/ui";

const { lang = 'es' } = Astro.props;
const t = useTranslations(lang);
---

<section id="waitlist" class="py-24 relative overflow-hidden">
  <!-- Dynamic Background -->
  <div class="absolute inset-0 bg-orange-50/50 dark:bg-orange-900/10 -z-10"></div>
  <div class="absolute -top-24 -right-24 w-96 h-96 bg-orange-200/30 dark:bg-orange-600/10 rounded-full blur-[100px] animate-float"></div>
  <div class="absolute -bottom-24 -left-24 w-96 h-96 bg-purple-200/30 dark:bg-purple-600/10 rounded-full blur-[100px] animate-float" style="animation-delay: 2s"></div>

  <div class="max-w-4xl mx-auto px-4 text-center">
    <div class="glass-card p-12 relative overflow-hidden">
      
      <div class="relative z-10">
        <h2 class="text-4xl md:text-5xl font-extrabold mb-6 text-gray-900 dark:text-white">
            {t('cta.title')}
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-10">
            {t('cta.subtitle')}
        </p>

        <form 
            action="https://formspree.io/f/mgokjbbp" 
            method="POST"
            class="flex flex-col sm:flex-row gap-4 max-w-lg mx-auto"
        >
          <div class="relative flex-1">
            <Mail className="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" />
            <input 
              type="email" 
              name="email"
              placeholder={t('form.email_placeholder')}
              required
              class="w-full pl-12 pr-4 py-4 rounded-xl bg-white/50 dark:bg-white/5 border border-gray-200 dark:border-white/10 focus:ring-2 focus:ring-primary outline-none transition-all placeholder:text-gray-400"
            />
          </div>
          <button type="submit" class="px-8 py-4 bg-primary hover:bg-primary-dark text-white font-bold rounded-xl shadow-lg hover:shadow-primary/30 transition-all flex items-center justify-center gap-2">
            {t('form.submit')}
            <ArrowRight className="w-5 h-5" />
          </button>
        </form>

        <p class="text-xs text-gray-500 mt-6 flex items-center justify-center gap-2">
          <span class="w-2 h-2 rounded-full bg-green-500"></span>
          {t('form.disclaimer')}
        </p>
      </div>

    </div>
  </div>
</section>

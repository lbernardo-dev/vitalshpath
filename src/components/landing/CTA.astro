---
import { Download } from "lucide-react";
import { useTranslations } from "../../i18n/ui";

const { lang = 'es' } = Astro.props;
const t = useTranslations(lang);
---

<section class="py-24 bg-white border-t border-slate-100">
    <div class="clinical-container">
        <div class="bg-teal-700 rounded-2xl p-12 text-center md:text-left relative overflow-hidden shadow-2xl">
            <!-- Background Pattern -->
             <div class="absolute top-0 right-0 w-64 h-64 bg-teal-600 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 opacity-50"></div>
             
            <div class="relative z-10 flex flex-col md:flex-row items-center justify-between gap-8">
                <div class="max-w-xl">
                    <h2 class="text-3xl md:text-4xl font-serif text-white mb-4">
                        Comienza a cuidar tu salud con precisión clínica.
                    </h2>
                    <p class="text-teal-100 text-lg">
                        Únete a miles de familias que ya confían en VitalsPath.
                    </p>
                </div>
                
                <a href="#" class="inline-flex items-center justify-center px-8 py-4 bg-white text-teal-800 font-bold rounded-lg shadow-lg hover:shadow-xl hover:bg-slate-50 transition-all transform hover:-translate-y-1">
                    <Download className="w-5 h-5 mr-2" />
                    Descargar Gratis
                </a>
            </div>
        </div>
    </div>
</section>

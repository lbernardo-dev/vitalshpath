---
import { Image } from "astro:assets";
import { type Lang } from "../../i18n/ui-locales";
import { useTranslations } from "../../i18n";

// Import images directly
import screenDashboard from "../../assets/images/screens/screen-01-dashboard.PNG";
import screenProfiles from "../../assets/images/screens/screen-02-profiles.PNG";
import screenMedications from "../../assets/images/screens/screen-04-medications.PNG";
import screenSymptoms from "../../assets/images/screens/screen-13-symptoms.PNG";
import screenConditions from "../../assets/images/screens/screen-15-conditions.PNG";
import screenWellness from "../../assets/images/screens/screen-18-wellness.PNG";
import screenProfileDetail from "../../assets/images/screens/screen-03-profile-detail.PNG";
import screenMedicationDetail from "../../assets/images/screens/screen-05-medication-detail.PNG";
import screenDoseLog from "../../assets/images/screens/screen-06-dose-log.PNG";

interface Props {
    lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const galleryImages = [
    { src: screenDashboard, alt: t("gallery.labels.dashboard") },
    { src: screenProfiles, alt: t("gallery.labels.profiles") },
    { src: screenMedications, alt: t("gallery.labels.medications") },
    { src: screenSymptoms, alt: t("gallery.labels.symptoms") },
    { src: screenConditions, alt: t("gallery.labels.conditions") },
    { src: screenWellness, alt: t("gallery.labels.wellness") },
    { src: screenProfileDetail, alt: t("gallery.labels.profileDetail") },
    { src: screenMedicationDetail, alt: t("gallery.labels.medicationDetail") },
    { src: screenDoseLog, alt: t("gallery.labels.doseLog") },
];
---

<section id="gallery" class="py-24 bg-white dark:bg-black overflow-hidden">
    <div class="container mx-auto px-6 mb-16 text-center">
        <span
            class="inline-block px-4 py-2 rounded-full bg-gray-100 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 text-sm font-semibold mb-4 text-cyan-500"
        >
            {t("gallery.badge")}
        </span>
        <h2
            class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6"
        >
            {t("gallery.title")}<br />
            <span
                class="bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 bg-clip-text text-transparent"
            >
                {t("gallery.titleHighlight")}
            </span>
        </h2>
    </div>

    {/* Marquee Container */}
    <div class="relative w-full overflow-hidden">
        {/* Gradient Masks */}
        <div
            class="absolute left-0 top-0 bottom-0 w-24 md:w-48 z-10 bg-gradient-to-r from-white dark:from-black to-transparent pointer-events-none"
        >
        </div>
        <div
            class="absolute right-0 top-0 bottom-0 w-24 md:w-48 z-10 bg-gradient-to-l from-white dark:from-black to-transparent pointer-events-none"
        >
        </div>

        <div class="flex animate-marquee gap-8">
            {/* First Set */}
            {
                galleryImages.map((image) => (
                    <div class="relative flex-none w-[200px] md:w-[240px] aspect-[9/19.5] rounded-[32px] overflow-hidden border-[6px] border-gray-100 dark:border-gray-800 shadow-2xl bg-gray-900">
                        <Image
                            src={image.src}
                            alt={image.alt}
                            width={480}
                            class="w-full h-full object-cover"
                            loading="lazy"
                        />
                    </div>
                ))
            }
            {/* Duplicate Set for Loop */}
            {
                galleryImages.map((image) => (
                    <div class="relative flex-none w-[200px] md:w-[240px] aspect-[9/19.5] rounded-[32px] overflow-hidden border-[6px] border-gray-100 dark:border-gray-800 shadow-2xl bg-gray-900">
                        <Image
                            src={image.src}
                            alt={image.alt}
                            width={480}
                            class="w-full h-full object-cover"
                            loading="lazy"
                        />
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    @keyframes marquee {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(calc(-100% / 2 - 2rem));
        }
        /* Adjust calculation based on content width */
    }
    .animate-marquee {
        animation: marquee 40s linear infinite;
        width: fit-content;
    }
    .animate-marquee:hover {
        animation-play-state: paused;
    }
</style>

---
import { Image } from "astro:assets";
import { type Lang } from "../../i18n/ui-locales";
import { useTranslations } from "../../i18n";
import DeviceMockup from "../DeviceMockup.astro";

// Import images
import screenDashboard from "../../assets/images/screens/screen-01-dashboard.PNG";
import screenProfiles from "../../assets/images/screens/screen-02-profiles.PNG";
import screenMedications from "../../assets/images/screens/screen-04-medications.PNG";
import screenSymptoms from "../../assets/images/screens/screen-13-symptoms.PNG";
import screenWellness from "../../assets/images/screens/screen-18-wellness.PNG";

interface Props {
    lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section
    id="gallery"
    class="py-24 relative overflow-hidden bg-gray-50 dark:bg-black"
>
    {/* Decorative background elements */}
    <div class="absolute inset-0 pointer-events-none">
        <div
            class="absolute top-1/4 -left-20 w-96 h-96 bg-blue-500/10 rounded-full blur-[120px]"
        >
        </div>
        <div
            class="absolute bottom-1/4 -right-20 w-96 h-96 bg-purple-500/10 rounded-full blur-[120px]"
        >
        </div>
    </div>

    <div class="container mx-auto px-6 relative z-10">
        <div class="text-center max-w-3xl mx-auto mb-20">
            <span
                class="inline-block px-4 py-2 rounded-full bg-blue-50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400 text-sm font-semibold mb-4"
            >
                {t("gallery.badge")}
            </span>
            <h2
                class="text-4xl md:text-6xl font-black text-gray-900 dark:text-white mb-6 tracking-tight"
            >
                {t("gallery.title")}<br />
                <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 via-purple-600 to-pink-600"
                >
                    {t("gallery.titleHighlight")}
                </span>
            </h2>
            <p class="text-xl text-gray-600 dark:text-gray-400">
                {t("gallery.note")}
            </p>
        </div>

        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12 items-center"
        >
            {/* Main View */}
            <div class="lg:col-span-1 space-y-8" data-aos="fade-up">
                <div
                    class="p-8 rounded-[2.5rem] bg-white dark:bg-gray-900 border border-gray-100 dark:border-gray-800 shadow-2xl hover:shadow-blue-500/10 transition-all group"
                >
                    <div
                        class="w-14 h-14 rounded-2xl bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="28"
                            height="28"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="text-blue-600"
                            ><rect width="7" height="9" x="3" y="3" rx="1"
                            ></rect><rect
                                width="7"
                                height="5"
                                x="14"
                                y="3"
                                rx="1"></rect><rect
                                width="7"
                                height="9"
                                x="14"
                                y="12"
                                rx="1"></rect><rect
                                width="7"
                                height="5"
                                x="3"
                                y="16"
                                rx="1"></rect>
                        </svg>
                    </div>
                    <h3
                        class="text-2xl font-bold text-gray-900 dark:text-white mb-4"
                    >
                        {t("gallery.labels.dashboard")}
                    </h3>
                    <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
                        {t("features.items.widgets.description")}
                    </p>
                </div>

                <div
                    class="p-8 rounded-[2.5rem] bg-white dark:bg-gray-900 border border-gray-100 dark:border-gray-800 shadow-2xl hover:shadow-purple-500/10 transition-all group"
                >
                    <div
                        class="w-14 h-14 rounded-2xl bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="28"
                            height="28"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="text-purple-600"
                            ><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"
                            ></path><circle cx="9" cy="7" r="4"></circle><path
                                d="M22 21v-2a4 4 0 0 0-3-3.87"></path><path
                                d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                        </svg>
                    </div>
                    <h3
                        class="text-2xl font-bold text-gray-900 dark:text-white mb-4"
                    >
                        {t("gallery.labels.profiles")}
                    </h3>
                    <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
                        {t("features.items.profiles.description")}
                    </p>
                </div>
            </div>

            {/* Central Mockup */}
            <div class="lg:col-span-1 flex justify-center" data-aos="zoom-in">
                <div class="relative group">
                    <div
                        class="absolute -inset-4 bg-gradient-to-tr from-blue-600 to-purple-600 rounded-[3rem] blur-2xl opacity-20 group-hover:opacity-40 transition-opacity"
                    >
                    </div>
                    <DeviceMockup>
                        <Image
                            src={screenDashboard}
                            alt={t("gallery.labels.dashboard")}
                            class="w-full h-full object-cover"
                            width={284}
                        />
                    </DeviceMockup>
                </div>
            </div>

            {/* Second Set */}
            <div
                class="lg:col-span-1 space-y-8"
                data-aos="fade-up"
                data-aos-delay="200"
            >
                <div
                    class="p-8 rounded-[2.5rem] bg-white dark:bg-gray-900 border border-gray-100 dark:border-gray-800 shadow-2xl hover:shadow-pink-500/10 transition-all group"
                >
                    <div
                        class="w-14 h-14 rounded-2xl bg-pink-100 dark:bg-pink-900/30 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="28"
                            height="28"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="text-pink-600"
                            ><path d="m12 14 4-4"></path><path
                                d="M3.34 19a10 10 0 1 1 17.32 0"></path>
                        </svg>
                    </div>
                    <h3
                        class="text-2xl font-bold text-gray-900 dark:text-white mb-4"
                    >
                        {t("gallery.labels.wellness")}
                    </h3>
                    <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
                        {t("features.items.wellness.description")}
                    </p>
                </div>

                <div
                    class="p-8 rounded-[2.5rem] bg-white dark:bg-gray-900 border border-gray-100 dark:border-gray-800 shadow-2xl hover:shadow-teal-500/10 transition-all group"
                >
                    <div
                        class="w-14 h-14 rounded-2xl bg-teal-100 dark:bg-teal-900/30 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="28"
                            height="28"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="text-teal-600"
                            ><path
                                d="M4.8 2.3A.3.3 0 1 0 5 2h0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h0a.3.3 0 1 0 .2-.3Z"
                            ></path><path
                                d="M13 19c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V5c0-1.1.9-2 2-2h7c1.1 0 2 .9 2 2v14Z"
                            ></path><path d="M6 7h4"></path><path d="M6 11h4"
                            ></path><path d="M6 15h1"></path>
                        </svg>
                    </div>
                    <h3
                        class="text-2xl font-bold text-gray-900 dark:text-white mb-4"
                    >
                        {t("gallery.labels.medications")}
                    </h3>
                    <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
                        {t("features.items.medication.description")}
                    </p>
                </div>
            </div>
        </div>

        {/* Floating Mockups Bottom */}
        <div class="mt-32 flex flex-wrap justify-center gap-8 md:gap-16">
            <div
                class="w-48 transform -rotate-6 hover:rotate-0 transition-transform duration-500"
                data-aos="fade-right"
            >
                <div
                    class="rounded-3xl overflow-hidden border-4 border-white dark:border-gray-800 shadow-2xl"
                >
                    <Image
                        src={screenWellness}
                        alt="Wellness"
                        width={200}
                        class="w-full"
                    />
                </div>
            </div>
            <div
                class="w-48 transform rotate-3 hover:rotate-0 transition-transform duration-500"
                data-aos="fade-up"
            >
                <div
                    class="rounded-3xl overflow-hidden border-4 border-white dark:border-gray-800 shadow-2xl"
                >
                    <Image
                        src={screenProfiles}
                        alt="Profiles"
                        width={200}
                        class="w-full"
                    />
                </div>
            </div>
            <div
                class="w-48 transform -rotate-3 hover:rotate-0 transition-transform duration-500"
                data-aos="fade-left"
            >
                <div
                    class="rounded-3xl overflow-hidden border-4 border-white dark:border-gray-800 shadow-2xl"
                >
                    <Image
                        src={screenSymptoms}
                        alt="Symptoms"
                        width={200}
                        class="w-full"
                    />
                </div>
            </div>
        </div>
    </div>
</section>

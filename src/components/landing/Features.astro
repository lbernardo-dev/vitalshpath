---
import {
    Users,
    Brain,
    Activity,
    Calendar,
    Shield,
    Syringe,
    ClipboardList,
    Bell,
    Heart,
    Thermometer,
    Stethoscope,
    FileText,
    ArrowRight,
    Sparkles,
} from "lucide-react";
import { type Lang } from "../../i18n/ui-locales";
import { useTranslations } from "../../i18n";

interface Props {
    lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section
    id="features"
    class="py-24 relative overflow-hidden bg-white dark:bg-black"
>
    <!-- Decorative background elements -->
    <div
        class="absolute top-0 right-0 w-[500px] h-[500px] bg-blue-500/5 blur-[120px] rounded-full pointer-events-none"
    >
    </div>
    <div
        class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-purple-500/5 blur-[120px] rounded-full pointer-events-none"
    >
    </div>

    <div class="container mx-auto px-6 relative z-10">
        <div class="text-center max-w-3xl mx-auto mb-20 reveal">
            <div
                class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-blue-500/10 border border-blue-500/20 mb-6 backdrop-blur-sm"
            >
                <Sparkles className="w-4 h-4 text-blue-500" />
                <span
                    class="text-sm font-medium text-blue-600 dark:text-blue-400"
                    >{t("features.badge")}</span
                >
            </div>
            <h2
                class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6 tracking-tight"
            >
                {t("features.title")}<br />
                <span
                    class="bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 bg-clip-text text-transparent"
                >
                    {t("features.titleHighlight")}
                </span>
            </h2>
            <p class="text-xl text-gray-600 dark:text-gray-400 leading-relaxed">
                {t("features.subtitle")}
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <!-- Family Profiles - Large Card -->
            <div class="lg:col-span-2 lg:row-span-2 reveal reveal-left">
                <div
                    class="h-full liquid-glass p-10 group hover:scale-[1.01] transition-all duration-500"
                >
                    <div
                        class="w-14 h-14 rounded-2xl bg-gradient-to-br from-blue-500 to-cyan-500 flex items-center justify-center mb-8 shadow-lg shadow-blue-500/20 group-hover:scale-110 group-hover:rotate-3 transition-transform"
                    >
                        <Users className="w-8 h-8 text-white" />
                    </div>
                    <h3
                        class="text-3xl font-bold text-gray-900 dark:text-white mb-4"
                    >
                        {t("features.items.profiles.title")}
                    </h3>
                    <p
                        class="text-lg text-gray-600 dark:text-gray-400 mb-8 max-w-md"
                    >
                        {t("features.items.profiles.description")}
                    </p>

                    <!-- Interactive profile preview -->
                    <div
                        class="flex items-center gap-4 p-6 rounded-3xl bg-white/50 dark:bg-white/5 border border-white dark:border-white/10 shadow-xl shadow-black/5"
                    >
                        <div class="flex -space-x-3">
                            {
                                ["pink", "blue", "green", "purple"].map(
                                    (color, i) => (
                                        <div
                                            class={`w-12 h-12 rounded-full bg-gradient-to-br from-${color}-400 to-${color}-600 border-2 border-white dark:border-gray-900 flex items-center justify-center text-white font-bold text-sm shadow-lg`}
                                        >
                                            {["M", "P", "H", "A"][i]}
                                        </div>
                                    )
                                )
                            }
                        </div>
                        <div class="h-8 w-px bg-gray-200 dark:bg-gray-700 mx-2">
                        </div>
                        <p
                            class="text-sm font-medium text-gray-500 dark:text-gray-400"
                        >
                            {t("hero.labels.familyProfiles")}
                        </p>
                    </div>
                </div>
            </div>

            <!-- Treatments (replacing Scheduler) -->
            <div class="reveal stagger-1">
                <div
                    class="h-full liquid-glass p-8 group hover:scale-[1.02] transition-all duration-300"
                >
                    <div
                        class="w-12 h-12 rounded-xl bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center mb-6 shadow-lg shadow-purple-500/20 group-hover:scale-110 transition-transform"
                    >
                        <Stethoscope className="w-6 h-6 text-white" />
                    </div>
                    <h4
                        class="text-xl font-bold text-gray-900 dark:text-white mb-2"
                    >
                        {t("features.items.treatments.title")}
                    </h4>
                    <p
                        class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed"
                    >
                        {t("features.items.treatments.description")}
                    </p>
                </div>
            </div>

            <!-- Medication -->
            <div class="reveal stagger-2">
                <div
                    class="h-full liquid-glass p-8 group hover:scale-[1.02] transition-all duration-300"
                >
                    <div
                        class="w-12 h-12 rounded-xl bg-gradient-to-br from-red-500 to-orange-500 flex items-center justify-center mb-6 shadow-lg shadow-red-500/20 group-hover:scale-110 transition-transform"
                    >
                        <Syringe className="w-6 h-6 text-white" />
                    </div>
                    <h4
                        class="text-xl font-bold text-gray-900 dark:text-white mb-2"
                    >
                        {t("features.items.medication.title")}
                    </h4>
                    <p
                        class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed"
                    >
                        {t("features.items.medication.description")}
                    </p>
                </div>
            </div>

            <!-- Reports - Medium Card -->
            <div class="lg:col-span-2 reveal stagger-1">
                <div
                    class="h-full liquid-glass p-8 group hover:scale-[1.01] transition-all duration-500 flex gap-6 items-center"
                >
                    <div
                        class="hidden sm:flex w-20 h-20 rounded-2xl bg-gradient-to-br from-teal-400 to-cyan-500 items-center justify-center shadow-lg shadow-teal-500/20 group-hover:rotate-3 transition-transform flex-shrink-0"
                    >
                        <FileText className="w-10 h-10 text-white" />
                    </div>
                    <div>
                        <h4
                            class="text-2xl font-bold text-gray-900 dark:text-white mb-2"
                        >
                            {t("features.items.reports.title")}
                        </h4>
                        <p class="text-gray-600 dark:text-gray-400">
                            {t("features.items.reports.description")}
                        </p>
                    </div>
                </div>
            </div>

            <!-- Symptoms (replacing Privacy) -->
            <div class="reveal stagger-2">
                <div
                    class="h-full liquid-glass p-6 group hover:scale-[1.02] transition-all"
                >
                    <Thermometer
                        className="w-8 h-8 text-green-500 mb-4 group-hover:scale-110 transition-transform"
                    />
                    <h5 class="font-bold text-gray-900 dark:text-white mb-1">
                        {t("features.items.symptoms.title")}
                    </h5>
                    <p class="text-xs text-gray-600 dark:text-gray-400">
                        {t("features.items.symptoms.description")}
                    </p>
                </div>
            </div>
            <div class="reveal stagger-3">
                <div
                    class="h-full liquid-glass p-6 group hover:scale-[1.02] transition-all"
                >
                    <Activity
                        className="w-8 h-8 text-blue-500 mb-4 group-hover:scale-110 transition-transform"
                    />
                    <h5 class="font-bold text-gray-900 dark:text-white mb-1">
                        {t("features.items.wellness.title")}
                    </h5>
                    <p class="text-xs text-gray-500">
                        {t("features.items.wellness.description")}
                    </p>
                </div>
            </div>
            <div class="reveal stagger-4">
                <div
                    class="h-full liquid-glass p-6 group hover:scale-[1.02] transition-all"
                >
                    <Calendar
                        className="w-8 h-8 text-purple-500 mb-4 group-hover:scale-110 transition-transform"
                    />
                    <h5 class="font-bold text-gray-900 dark:text-white mb-1">
                        {t("features.items.calendar.title")}
                    </h5>
                    <p class="text-xs text-gray-500">
                        {t("features.items.calendar.description")}
                    </p>
                </div>
            </div>
            <!-- Metrics (replacing Notifications) -->
            <div class="reveal stagger-5">
                <div
                    class="h-full liquid-glass p-6 group hover:scale-[1.02] transition-all"
                >
                    <Activity
                        className="w-8 h-8 text-orange-500 mb-4 group-hover:scale-110 transition-transform"
                    />
                    <h5 class="font-bold text-gray-900 dark:text-white mb-1">
                        {t("features.items.metrics.title")}
                    </h5>
                    <p class="text-xs text-gray-600 dark:text-gray-400">
                        {t("features.items.metrics.description")}
                    </p>
                </div>
            </div>
        </div>

        <!-- Footer CTA in section -->
        <div class="mt-24 text-center reveal reveal-scale">
            <a
                href="#waitlist"
                class="inline-flex items-center gap-3 px-10 py-5 rounded-[32px] bg-gray-900 text-white dark:bg-white dark:text-gray-900 font-bold text-lg hover:scale-105 transition-all shadow-2xl shadow-blue-500/20"
            >
                {t("features.cta.primary")}
                <ArrowRight className="w-6 h-6" />
            </a>
        </div>
    </div>
</section>

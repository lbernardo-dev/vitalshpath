---
import {
    Users,
    Brain,
    Activity,
    Calendar,
    Shield,
    Syringe,
    ClipboardList,
    Bell,
    Heart,
    Thermometer,
    Stethoscope,
    FileText,
} from "lucide-react";
import { type Lang } from "../../i18n/ui-locales";
import { useTranslations } from "../../i18n";

interface Props {
    lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section id="features" class="py-12 md:py-24 relative bg-white dark:bg-black">
    <div class="container mx-auto px-6">
        <div class="text-center max-w-3xl mx-auto mb-16">
            <span
                class="inline-block px-4 py-2 rounded-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 text-sm font-semibold mb-4 text-blue-500"
            >
                {t("features.badge")}
            </span>
            <h2
                class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-6"
            >
                {t("features.title")}<br />
                <span
                    class="bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 bg-clip-text text-transparent"
                    >{t("features.titleHighlight")}</span
                >
            </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div
                class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 p-8 rounded-3xl shadow-sm lg:col-span-1 lg:row-span-2"
            >
                <div
                    class="w-14 h-14 rounded-2xl bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center text-white shadow-lg mb-6"
                >
                    <Users className="w-7 h-7" />
                </div>
                <h3
                    class="text-2xl font-bold text-gray-900 dark:text-white mb-3"
                >
                    {t("features.items.profiles.title")}
                </h3>
                <p class="text-gray-600 dark:text-gray-400 mb-6">
                    {t("features.items.profiles.description")}
                </p>
                <div class="flex items-center gap-2">
                    <div
                        class="w-10 h-10 rounded-full bg-gradient-to-br from-pink-400 to-pink-500 flex items-center justify-center text-white text-xs font-bold"
                    >
                        M
                    </div>
                    <div
                        class="w-10 h-10 rounded-full bg-gradient-to-br from-blue-400 to-blue-500 flex items-center justify-center text-white text-xs font-bold"
                    >
                        P
                    </div>
                    <div
                        class="w-10 h-10 rounded-full bg-gradient-to-br from-green-400 to-green-500 flex items-center justify-center text-white text-xs font-bold"
                    >
                        H
                    </div>
                    <div
                        class="w-10 h-10 rounded-full bg-gradient-to-br from-purple-400 to-purple-500 flex items-center justify-center text-white text-xs font-bold"
                    >
                        A
                    </div>
                </div>
            </div>

            <div
                class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 p-6 rounded-3xl shadow-sm"
            >
                <div
                    class="w-12 h-12 rounded-2xl bg-gradient-to-br from-purple-500 to-purple-600 flex items-center justify-center text-white shadow-lg mb-4"
                >
                    <Brain className="w-6 h-6" />
                </div>
                <h3
                    class="text-xl font-bold text-gray-900 dark:text-white mb-2"
                >
                    {t("features.items.scheduler.title")}
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                    {t("features.items.scheduler.description")}
                </p>
            </div>

            <div
                class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 p-6 rounded-3xl shadow-sm"
            >
                <div
                    class="w-12 h-12 rounded-2xl bg-gradient-to-br from-green-500 to-emerald-500 flex items-center justify-center text-white shadow-lg mb-4"
                >
                    <Shield className="w-6 h-6" />
                </div>
                <h3
                    class="text-xl font-bold text-gray-900 dark:text-white mb-2"
                >
                    {t("features.items.privacy.title")}
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                    {t("features.items.privacy.description")}
                </p>
            </div>

            <div
                class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 p-6 rounded-3xl shadow-sm"
            >
                <div
                    class="w-12 h-12 rounded-2xl bg-gradient-to-br from-orange-500 to-red-500 flex items-center justify-center text-white shadow-lg mb-4"
                >
                    <Syringe className="w-6 h-6" />
                </div>
                <h3
                    class="text-xl font-bold text-gray-900 dark:text-white mb-2"
                >
                    {t("features.items.medication.title")}
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                    {t("features.items.medication.description")}
                </p>
            </div>

            <div
                class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 p-6 rounded-3xl shadow-sm"
            >
                <div
                    class="w-12 h-12 rounded-2xl bg-gradient-to-br from-teal-500 to-cyan-500 flex items-center justify-center text-white shadow-lg mb-4"
                >
                    <Activity className="w-6 h-6" />
                </div>
                <h3
                    class="text-xl font-bold text-gray-900 dark:text-white mb-2"
                >
                    {t("features.items.wellness.title")}
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                    {t("features.items.wellness.description")}
                </p>
            </div>

            <div
                class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 p-6 rounded-3xl shadow-sm"
            >
                <div
                    class="w-12 h-12 rounded-2xl bg-gradient-to-br from-indigo-500 to-violet-500 flex items-center justify-center text-white shadow-lg mb-4"
                >
                    <Calendar className="w-6 h-6" />
                </div>
                <h3
                    class="text-xl font-bold text-gray-900 dark:text-white mb-2"
                >
                    {t("features.items.calendar.title")}
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                    {t("features.items.calendar.description")}
                </p>
            </div>

            <div
                class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 p-6 rounded-3xl shadow-sm"
            >
                <div
                    class="w-12 h-12 rounded-2xl bg-gradient-to-br from-amber-500 to-yellow-500 flex items-center justify-center text-white shadow-lg mb-4"
                >
                    <ClipboardList className="w-6 h-6" />
                </div>
                <h3
                    class="text-xl font-bold text-gray-900 dark:text-white mb-2"
                >
                    {t("features.items.tasks.title")}
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                    {t("features.items.tasks.description")}
                </p>
            </div>

            <div
                class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 p-6 rounded-3xl shadow-sm"
            >
                <div
                    class="w-12 h-12 rounded-2xl bg-gradient-to-br from-pink-500 to-rose-500 flex items-center justify-center text-white shadow-lg mb-4"
                >
                    <Bell className="w-6 h-6" />
                </div>
                <h3
                    class="text-xl font-bold text-gray-900 dark:text-white mb-2"
                >
                    {t("features.items.notifications.title")}
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                    {t("features.items.notifications.description")}
                </p>
            </div>

            <div
                class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 p-6 rounded-3xl shadow-sm"
            >
                <div
                    class="w-12 h-12 rounded-2xl bg-gradient-to-br from-red-500 to-pink-500 flex items-center justify-center text-white shadow-lg mb-4"
                >
                    <Heart className="w-6 h-6" />
                </div>
                <h3
                    class="text-xl font-bold text-gray-900 dark:text-white mb-2"
                >
                    {t("features.items.widgets.title")}
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                    {t("features.items.widgets.description")}
                </p>
            </div>

            <div
                class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 p-6 rounded-3xl shadow-sm"
            >
                <div
                    class="w-12 h-12 rounded-2xl bg-gradient-to-br from-orange-400 to-orange-500 flex items-center justify-center text-white shadow-lg mb-4"
                >
                    <Thermometer className="w-6 h-6" />
                </div>
                <h3
                    class="text-xl font-bold text-gray-900 dark:text-white mb-2"
                >
                    {t("features.items.symptoms.title")}
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                    {t("features.items.symptoms.description")}
                </p>
            </div>

            <div
                class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 p-6 rounded-3xl shadow-sm"
            >
                <div
                    class="w-12 h-12 rounded-2xl bg-gradient-to-br from-blue-400 to-indigo-500 flex items-center justify-center text-white shadow-lg mb-4"
                >
                    <Stethoscope className="w-6 h-6" />
                </div>
                <h3
                    class="text-xl font-bold text-gray-900 dark:text-white mb-2"
                >
                    {t("features.items.treatments.title")}
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                    {t("features.items.treatments.description")}
                </p>
            </div>

            <div
                class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 p-6 rounded-3xl shadow-sm"
            >
                <div
                    class="w-12 h-12 rounded-2xl bg-gradient-to-br from-gray-400 to-gray-500 flex items-center justify-center text-white shadow-lg mb-4"
                >
                    <FileText className="w-6 h-6" />
                </div>
                <h3
                    class="text-xl font-bold text-gray-900 dark:text-white mb-2"
                >
                    {t("features.items.reports.title")}
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                    {t("features.items.reports.description")}
                </p>
            </div>
        </div>

        <div class="mt-20 text-center">
            <a
                href="#waitlist"
                class="inline-flex items-center gap-2 text-blue-600 dark:text-blue-400 font-bold hover:underline group"
            >
                {t("waitlist.form.button")}
                <ArrowRight
                    className="w-4 h-4 group-hover:translate-x-1 transition-transform"
                />
            </a>
        </div>
    </div>
</section>

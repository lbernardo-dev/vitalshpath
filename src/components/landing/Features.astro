---
import { Users, Brain, Pill, Thermometer, Calendar, ClipboardList, Stethoscope } from "lucide-react";
import { useTranslations } from "../../i18n/ui";

const { lang = 'es' } = Astro.props;
const t = useTranslations(lang);
---

<section id="features" class="py-24 bg-surface relative">
  
  <div class="clinical-container relative z-10">
    <div class="text-center mb-20 max-w-3xl mx-auto">
      <h2 class="text-label mb-4">{t('features.subtitle')}</h2>
      <h3 class="text-display text-4xl md:text-5xl mb-6">{t('features.title')}</h3>
    </div>

    <!-- Features Grid: Clinical Bento -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      
      <!-- Feature 1: Wellness (Large) -->
      <div class="clinical-card col-span-1 md:col-span-2 row-span-2 p-8 flex flex-col justify-between group">
        <div class="mb-8">
          <div class="w-12 h-12 bg-blue-50 rounded-lg flex items-center justify-center text-blue-600 mb-6 border border-blue-100">
            <Users className="w-6 h-6" />
          </div>
          <h3 class="text-2xl font-serif font-semibold mb-3 text-slate-900">{t('feature.profiles.title')}</h3>
          <p class="text-slate-600 leading-relaxed max-w-md">
            {t('feature.profiles.desc')}
          </p>
        </div>
        
        <div class="relative h-[300px] w-full rounded-lg overflow-hidden border border-slate-100 mt-auto shadow-inner">
             <img src={`${import.meta.env.BASE_URL}/assets/images/screens/screen-01.jpg`} class="w-full h-full object-cover object-top hover:scale-105 transition-transform duration-700" alt="Wellness Dashboard" />
        </div>
      </div>

      <!-- Feature 2: Smart Scheduler -->
      <div class="clinical-card p-8 flex flex-col group relative overflow-hidden">
         <div class="mb-6 relative z-10">
            <div class="w-10 h-10 bg-purple-50 rounded-lg flex items-center justify-center text-purple-600 mb-4 border border-purple-100">
              <Brain className="w-5 h-5" />
            </div>
            <h3 class="text-lg font-bold mb-2 text-slate-900">{t('feature.scheduler.title')}</h3>
            <p class="text-sm text-slate-500">{t('feature.scheduler.desc')}</p>
         </div>
         <div class="mt-4 h-40 w-full rounded-lg overflow-hidden border border-slate-100 relative z-0">
             <img src={`${import.meta.env.BASE_URL}/assets/images/screens/screen-03.jpg`} class="w-full h-full object-cover object-top hover:scale-105 transition-transform duration-700" />
         </div>
      </div>

      <!-- Feature 3: Medications -->
      <div class="clinical-card p-8 flex flex-col group relative overflow-hidden">
         <div class="mb-6 relative z-10">
            <div class="w-10 h-10 bg-orange-50 rounded-lg flex items-center justify-center text-orange-600 mb-4 border border-orange-100">
              <Pill className="w-5 h-5" />
            </div>
            <h3 class="text-lg font-bold mb-2 text-slate-900">{t('feature.medications.title')}</h3>
            <p class="text-sm text-slate-500">{t('feature.medications.desc')}</p>
         </div>
         <div class="absolute bottom-[-10px] right-[-10px] w-32 h-32 opacity-20 rotate-12 grayscale group-hover:grayscale-0 transition-all duration-500">
             <img src={`${import.meta.env.BASE_URL}/assets/images/screens/screen-05.jpg`} class="w-full h-full object-cover rounded-lg shadow-sm" />
         </div>
      </div>

      <!-- Feature 4: Symptoms -->
      <div class="clinical-card p-0 col-span-1 flex flex-col justify-between overflow-hidden group">
         <div class="p-8">
            <div class="w-10 h-10 bg-red-50 rounded-lg flex items-center justify-center text-red-600 mb-4 border border-red-100">
                <Thermometer className="w-5 h-5" />
            </div>
            <h3 class="text-lg font-bold mb-2 text-slate-900">{t('feature.symptoms.title')}</h3>
            <p class="text-sm text-slate-500">{t('feature.symptoms.desc')}</p>
         </div>
         <div class="h-32 w-full mt-auto border-t border-slate-100 overflow-hidden">
            <img src={`${import.meta.env.BASE_URL}/assets/images/screens/screen-07.jpg`} class="w-full h-full object-cover object-top hover:scale-110 transition-transform duration-500" />
         </div>
      </div>

      <!-- Additional Features List (Compact) -->
      <div class="clinical-card col-span-1 md:col-span-2 lg:col-span-1 p-8 flex flex-col gap-6 justify-center bg-slate-50">
         <div class="flex gap-4 items-start">
            <div class="w-8 h-8 rounded-full bg-white border border-slate-200 flex items-center justify-center text-green-600 shrink-0"><ClipboardList className="w-4 h-4"/></div>
            <div>
               <h4 class="font-bold text-slate-900 text-sm">{t('feature.plans.title')}</h4>
               <p class="text-xs text-slate-500 mt-1">{t('feature.plans.desc')}</p>
            </div>
         </div>
         <div class="flex gap-4 items-start">
            <div class="w-8 h-8 rounded-full bg-white border border-slate-200 flex items-center justify-center text-yellow-600 shrink-0"><Stethoscope className="w-4 h-4"/></div>
            <div>
               <h4 class="font-bold text-slate-900 text-sm">{t('feature.conditions.title')}</h4>
               <p class="text-xs text-slate-500 mt-1">{t('feature.conditions.desc')}</p>
            </div>
         </div>
      </div>

      <!-- Calendar Feature -->
      <div class="clinical-card col-span-1 md:col-span-2 p-8 flex items-center gap-8 group overflow-hidden">
          <div class="flex-1 relative z-10">
             <div class="w-10 h-10 bg-indigo-50 rounded-lg flex items-center justify-center text-indigo-600 mb-4 border border-indigo-100">
                <Calendar className="w-5 h-5" />
             </div>
             <h3 class="text-2xl font-serif font-semibold mb-2 text-slate-900">{t('feature.calendar.title')}</h3>
             <p class="text-slate-600">{t('feature.calendar.desc')}</p>
          </div>
          <div class="hidden sm:block w-40 h-56 bg-white rounded-lg border border-slate-200 overflow-hidden shadow-md rotate-3 group-hover:rotate-0 transition-all duration-500 hover:scale-105">
             <img src={`${import.meta.env.BASE_URL}/assets/images/screens/screen-08.jpg`} class="w-full h-full object-cover" />
          </div>
      </div>

    </div>
  </div>
</section>

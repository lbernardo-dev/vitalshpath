---
import { Check, Smartphone } from "lucide-react";
import { type Lang } from "../../i18n/ui-locales";
import { useTranslations } from "../../i18n";

interface Props {
    lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const features = [
    "unlimited_profiles",
    "unlimited_diseases",
    "unlimited_medications",
    "unlimited_treatments",
    "extended_pause",
    "extend_medication",
    "full_schedule",
    "quiet_schedule",
    "stock_inventory",
    "export_pdf_csv",
    "advanced_analytics",
    "health_reports",
    "ocr_scanner",
    "healthkit",
    "complex_symptoms",
    "icloud_backup",
    "all_themes",
    "advanced_notifications",
    "haptic_feedback",
    "widget_styles",
];
---

<section id="pricing" class="py-12 md:py-24 relative overflow-hidden">
    <div class="absolute inset-0 bg-gray-50 dark:bg-gray-900/50 -z-10"></div>

    <div class="container mx-auto px-6">
        <div class="text-center max-w-3xl mx-auto mb-12 md:mb-16">
            <span
                class="inline-block px-4 py-2 rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 text-sm font-semibold mb-4 border border-blue-200 dark:border-blue-800"
            >
                {t("pricing.badge")}
            </span>
            <h2
                class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-6"
            >
                {t("pricing.title")}
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-400">
                {t("pricing.subtitle")}
            </p>
        </div>

        <div
            class="grid md:grid-cols-2 gap-6 lg:gap-12 max-w-5xl mx-auto items-start"
        >
            <!-- Free Plan -->
            <div
                class="relative p-8 bg-white dark:bg-gray-800/50 rounded-3xl border border-gray-200 dark:border-gray-700 shadow-sm flex flex-col"
            >
                <div class="mb-8">
                    <h3
                        class="text-2xl font-bold text-gray-900 dark:text-white mb-2"
                    >
                        {t("pricing.free.title")}
                    </h3>
                    <p class="text-gray-500 dark:text-gray-400 mb-6">
                        {t("pricing.free.description")}
                    </p>
                    <div class="flex items-baseline gap-1">
                        <span
                            class="text-4xl font-bold text-gray-900 dark:text-white"
                        >
                            {t("pricing.free.price")}
                        </span>
                        <span class="text-gray-500 dark:text-gray-400">
                            {t("pricing.free.period")}
                        </span>
                    </div>
                </div>

                <ul class="space-y-4 mb-8 flex-1">
                    <li
                        class="flex items-start gap-3 text-gray-600 dark:text-gray-300"
                    >
                        <Check
                            className="w-5 h-5 text-gray-400 flex-shrink-0 mt-0.5"
                        />
                        <span class="text-sm"
                            >{t("pricing.features.basic_profiles")}</span
                        >
                    </li>
                    <li
                        class="flex items-start gap-3 text-gray-600 dark:text-gray-300"
                    >
                        <Check
                            className="w-5 h-5 text-gray-400 flex-shrink-0 mt-0.5"
                        />
                        <span class="text-sm"
                            >{t("pricing.features.basic_medications")}</span
                        >
                    </li>
                    <li
                        class="flex items-start gap-3 text-gray-600 dark:text-gray-300"
                    >
                        <Check
                            className="w-5 h-5 text-gray-400 flex-shrink-0 mt-0.5"
                        />
                        <span class="text-sm"
                            >{t("pricing.features.local_reminders")}</span
                        >
                    </li>
                </ul>

                <button
                    disabled
                    class="block w-full py-3.5 px-6 text-center bg-gray-100 dark:bg-gray-700 text-gray-400 dark:text-gray-500 font-semibold rounded-xl cursor-not-allowed"
                >
                    {t("pricing.cta_alt")}
                </button>
            </div>

            <!-- Premium Plan -->
            <div
                class="relative p-8 bg-white dark:bg-gray-900 rounded-3xl border-2 border-blue-500 shadow-2xl flex flex-col"
            >
                <div
                    class="absolute -top-4 left-1/2 -translate-x-1/2 px-4 py-1 bg-gradient-to-r from-blue-500 to-cyan-500 text-white text-xs font-bold uppercase tracking-wide rounded-full shadow-lg"
                >
                    {t("pricing.annual.badge")}
                </div>

                <div class="mb-8">
                    <h3
                        class="text-2xl font-bold text-gray-900 dark:text-white mb-2"
                    >
                        {t("pricing.premium.title")}
                    </h3>
                    <p class="text-gray-500 dark:text-gray-400 mb-6">
                        {t("pricing.premium.subtitle")}
                    </p>

                    <!-- Billing Toggle -->
                    <div
                        class="grid grid-cols-3 gap-2 p-1 bg-gray-100 dark:bg-gray-800 rounded-xl mb-6"
                    >
                        <button
                            class="plan-toggle px-3 py-2 rounded-lg text-sm font-medium transition-all text-gray-500 dark:text-gray-400"
                            data-plan="monthly"
                            data-price={t("pricing.monthly.price")}
                            data-period={t("pricing.monthly.period")}
                            data-discount=""
                        >
                            {t("pricing.monthly.title")}
                        </button>
                        <button
                            class="plan-toggle px-3 py-2 rounded-lg text-sm font-medium transition-all bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm"
                            data-plan="annual"
                            data-price={t("pricing.annual.price")}
                            data-period={t("pricing.annual.period")}
                            data-discount={t("pricing.annual.discount")}
                        >
                            {t("pricing.annual.title")}
                        </button>
                        <button
                            class="plan-toggle px-3 py-2 rounded-lg text-sm font-medium transition-all text-gray-500 dark:text-gray-400"
                            data-plan="lifetime"
                            data-price={t("pricing.lifetime.price")}
                            data-period={t("pricing.lifetime.period")}
                            data-discount={t("pricing.lifetime.discount")}
                        >
                            {t("pricing.lifetime.title")}
                        </button>
                    </div>

                    <div
                        class="flex items-baseline gap-1 animate-fade-in"
                        id="premium-price-container"
                    >
                        <span
                            class="text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-cyan-600"
                            id="premium-price"
                        >
                            {t("pricing.annual.price")}
                        </span>
                        <span
                            class="text-gray-500 dark:text-gray-400"
                            id="premium-period"
                        >
                            {t("pricing.annual.period")}
                        </span>
                    </div>
                </div>

                <div class="mb-4">
                    <span
                        class="text-sm font-semibold text-gray-900 dark:text-white"
                    >
                        {t("pricing.premium.features_title")}
                    </span>
                </div>

                <ul class="space-y-3 mb-8 flex-1 grid sm:grid-cols-2 gap-x-4">
                    {
                        features.map((f) => (
                            <li class="flex items-start gap-3 text-gray-700 dark:text-gray-300">
                                <Check className="w-4 h-4 text-blue-500 flex-shrink-0 mt-1" />
                                <span class="text-sm">
                                    {t(`pricing.features.${f}`)}
                                </span>
                            </li>
                        ))
                    }
                </ul>

                <button
                    disabled
                    class="block w-full py-4 px-6 text-center bg-gray-100 dark:bg-gray-800 text-gray-400 dark:text-gray-600 font-bold rounded-xl shadow-inner cursor-not-allowed"
                >
                    {t("pricing.cta_alt")}
                </button>
            </div>
        </div>
    </div>

    <script>
        const toggles = document.querySelectorAll(".plan-toggle");
        const priceEl = document.getElementById("premium-price");
        const periodEl = document.getElementById("premium-period");

        toggles.forEach((toggle) => {
            toggle.addEventListener("click", () => {
                // Update active state
                toggles.forEach((t) => {
                    t.classList.remove(
                        "bg-white",
                        "dark:bg-gray-700",
                        "text-gray-900",
                        "dark:text-white",
                        "shadow-sm"
                    );
                    t.classList.add("text-gray-500", "dark:text-gray-400");
                });
                toggle.classList.add(
                    "bg-white",
                    "dark:bg-gray-700",
                    "text-gray-900",
                    "dark:text-white",
                    "shadow-sm"
                );
                toggle.classList.remove("text-gray-500", "dark:text-gray-400");

                // Update content
                if (priceEl && periodEl) {
                    priceEl.textContent = toggle.getAttribute("data-price");
                    periodEl.textContent = toggle.getAttribute("data-period");

                    // Optional: Add animation/fade effect here
                    priceEl.parentElement?.classList.remove("animate-fade-in");
                    void priceEl.parentElement?.offsetWidth; // Trigger reflow
                    priceEl.parentElement?.classList.add("animate-fade-in");
                }
            });
        });
    </script>
</section>

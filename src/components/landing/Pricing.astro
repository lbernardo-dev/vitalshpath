---
import { Check, Smartphone } from "lucide-react";
import { type Lang } from "../../i18n/ui-locales";
import { useTranslations } from "../../i18n";

interface Props {
    lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const features = [
    "unlimited_profiles",
    "unlimited_diseases",
    "unlimited_medications",
    "unlimited_treatments",
    "extended_pause",
    "extend_medication",
    "full_schedule",
    "quiet_schedule",
    "stock_inventory",
    "export_pdf_csv",
    "advanced_analytics",
    "health_reports",
    "ocr_scanner",
    "healthkit",
    "complex_symptoms",
    "icloud_backup",
    "all_themes",
    "advanced_notifications",
    "haptic_feedback",
    "widget_styles",
];
---

<section id="pricing" class="py-24 relative overflow-hidden">
    <div class="absolute inset-0 bg-gray-50 dark:bg-gray-900/50 -z-10"></div>

    <div class="container mx-auto px-6">
        <div class="text-center max-w-3xl mx-auto mb-16">
            <span
                class="inline-block px-4 py-2 rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 text-sm font-semibold mb-4 border border-blue-200 dark:border-blue-800"
            >
                {t("pricing.badge")}
            </span>
            <h2
                class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-6"
            >
                {t("pricing.title")}
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-400">
                {t("pricing.subtitle")}
            </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
            <!-- Monthly Plan -->
            <div
                class="relative p-8 bg-white dark:bg-gray-800 rounded-3xl border border-gray-200 dark:border-gray-700 shadow-sm hover:shadow-xl transition-all duration-300 flex flex-col"
            >
                <div class="mb-6">
                    <h3
                        class="text-xl font-bold text-gray-900 dark:text-white mb-2"
                    >
                        {t("pricing.monthly.title")}
                    </h3>
                    <div class="flex items-baseline gap-1">
                        <span
                            class="text-4xl font-bold text-gray-900 dark:text-white"
                            >{t("pricing.monthly.price")}</span
                        >
                        <span class="text-gray-500 dark:text-gray-400"
                            >{t("pricing.monthly.period")}</span
                        >
                    </div>
                    <p class="text-sm text-gray-500 dark:text-gray-400 mt-2">
                        {t("pricing.monthly.description")}
                    </p>
                    <div
                        class="mt-3 inline-block px-3 py-1 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 text-xs font-bold rounded-full"
                    >
                        {t("pricing.monthly.discount")}
                    </div>
                </div>

                <ul class="space-y-4 mb-8 flex-1">
                    {
                        features.slice(0, 5).map((f) => (
                            <li class="flex items-start gap-3 text-gray-600 dark:text-gray-300">
                                <Check className="w-5 h-5 text-blue-500 flex-shrink-0 mt-0.5" />
                                <span class="text-sm">
                                    {t(`pricing.features.${f}`)}
                                </span>
                            </li>
                        ))
                    }
                    <li
                        class="flex items-start gap-3 text-gray-400 dark:text-gray-500"
                    >
                        <span class="text-sm italic"
                            >+ {t("gallery.labels.moreLanguages")}...</span
                        >
                    </li>
                </ul>

                <a
                    href="#download"
                    class="block w-full py-3 px-6 text-center bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 text-gray-900 dark:text-white font-semibold rounded-xl transition-colors"
                >
                    {t("pricing.cta")}
                </a>
            </div>

            <!-- Annual Plan (Highlighted) -->
            <div
                class="relative p-8 bg-white dark:bg-gray-800 rounded-3xl border-2 border-blue-500 shadow-2xl transform md:-translate-y-4 flex flex-col z-10"
            >
                <div
                    class="absolute -top-4 left-1/2 -translate-x-1/2 px-4 py-1 bg-gradient-to-r from-blue-500 to-cyan-500 text-white text-xs font-bold uppercase tracking-wide rounded-full shadow-lg"
                >
                    {t("pricing.annual.badge")}
                </div>

                <div class="mb-6">
                    <h3
                        class="text-xl font-bold text-gray-900 dark:text-white mb-2"
                    >
                        {t("pricing.annual.title")}
                    </h3>
                    <div class="flex items-baseline gap-1">
                        <span
                            class="text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-cyan-600"
                            >{t("pricing.annual.price")}</span
                        >
                        <span class="text-gray-500 dark:text-gray-400"
                            >{t("pricing.annual.period")}</span
                        >
                    </div>
                    <p class="text-sm text-gray-500 dark:text-gray-400 mt-2">
                        {t("pricing.annual.description")}
                    </p>
                    <div
                        class="mt-3 inline-block px-3 py-1 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 text-xs font-bold rounded-full"
                    >
                        {t("pricing.annual.discount")}
                    </div>
                </div>

                <ul class="space-y-4 mb-8 flex-1">
                    {
                        features.slice(0, 10).map((f) => (
                            <li class="flex items-start gap-3 text-gray-700 dark:text-gray-200">
                                <Check className="w-5 h-5 text-blue-500 flex-shrink-0 mt-0.5" />
                                <span class="text-sm font-medium">
                                    {t(`pricing.features.${f}`)}
                                </span>
                            </li>
                        ))
                    }
                    <li
                        class="flex items-start gap-3 text-gray-500 dark:text-gray-400"
                    >
                        <span class="text-sm italic"
                            >+ {t("gallery.labels.moreLanguages")}...</span
                        >
                    </li>
                </ul>

                <a
                    href="#download"
                    class="block w-full py-4 px-6 text-center bg-gradient-to-r from-blue-600 to-cyan-600 hover:from-blue-700 hover:to-cyan-700 text-white font-bold rounded-xl shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-1"
                >
                    {t("pricing.cta")}
                </a>
            </div>

            <!-- Lifetime Plan -->
            <div
                class="relative p-8 bg-white dark:bg-gray-800 rounded-3xl border border-gray-200 dark:border-gray-700 shadow-sm hover:shadow-xl transition-all duration-300 flex flex-col"
            >
                <div class="mb-6">
                    <h3
                        class="text-xl font-bold text-gray-900 dark:text-white mb-2"
                    >
                        {t("pricing.lifetime.title")}
                    </h3>
                    <div class="flex items-baseline gap-1">
                        <span
                            class="text-4xl font-bold text-gray-900 dark:text-white"
                            >{t("pricing.lifetime.price")}</span
                        >
                        <span class="text-gray-500 dark:text-gray-400 text-sm"
                            >{t("pricing.lifetime.period")}</span
                        >
                    </div>
                    <p class="text-sm text-gray-500 dark:text-gray-400 mt-2">
                        {t("pricing.lifetime.description")}
                    </p>
                    <div
                        class="mt-3 inline-block px-3 py-1 bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-400 text-xs font-bold rounded-full"
                    >
                        {t("pricing.lifetime.discount")}
                    </div>
                </div>

                <ul class="space-y-4 mb-8 flex-1">
                    {
                        features.slice(0, 15).map((f) => (
                            <li class="flex items-start gap-3 text-gray-600 dark:text-gray-300">
                                <Check className="w-5 h-5 text-purple-500 flex-shrink-0 mt-0.5" />
                                <span class="text-sm">
                                    {t(`pricing.features.${f}`)}
                                </span>
                            </li>
                        ))
                    }
                    <li
                        class="flex items-start gap-3 text-gray-600 dark:text-gray-300 font-bold"
                    >
                        <Check
                            className="w-5 h-5 text-purple-500 flex-shrink-0 mt-0.5"
                        />
                        <span class="text-sm">Forever Access</span>
                    </li>
                </ul>

                <a
                    href="#download"
                    class="block w-full py-3 px-6 text-center bg-gray-900 dark:bg-gray-700 hover:bg-black dark:hover:bg-gray-600 text-white font-semibold rounded-xl transition-colors"
                >
                    {t("pricing.cta")}
                </a>
            </div>
        </div>
    </div>
</section>

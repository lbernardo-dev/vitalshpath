---
import { Check, X, Star } from "lucide-react";
---

<section id="pricing" class="py-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-5xl font-extrabold mb-4 text-gray-900 dark:text-white">
        Empieza gratis. Crece cuando lo necesites.
      </h2>
      <p class="text-xl text-gray-500">
        Precios transparentes para familias reales. Sin sorpresas.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      <!-- Free Plan -->
      <div class="glass-card p-8 rounded-3xl border border-gray-200 dark:border-gray-800 flex flex-col">
        <div class="mb-6">
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white">Básico</h3>
          <div class="text-4xl font-extrabold mt-2 text-gray-900 dark:text-white">Gratis</div>
          <p class="text-gray-500 mt-2">Para uso personal o parejas.</p>
        </div>

        <ul class="space-y-4 mb-8 flex-1">
          {[
            { text: "Hasta 3 perfiles", check: true },
            { text: "5 medicamentos por perfil", check: true },
            { text: "Notificaciones estándar", check: true },
            { text: "Smart Scheduler Básico", check: true },
            { text: "Modo Discreto & Persistente", check: false },
            { text: "Exportación PDF & CSV", check: false },
            { text: "Backup en iCloud", check: false },
          ].map(feature => (
            <li class={`flex items-center gap-3 ${feature.check ? '' : 'text-gray-400 opacity-50'}`}>
              <div class={`w-5 h-5 rounded-full flex items-center justify-center ${feature.check ? 'bg-green-100 text-green-600' : 'bg-gray-100 text-gray-400'}`}>
                {feature.check ? <Check className="w-3 h-3" /> : <X className="w-3 h-3" />}
              </div>
              <span class="text-sm font-medium">{feature.text}</span>
            </li>
          ))}
        </ul>

        <button class="w-full py-4 rounded-xl border-2 border-gray-200 dark:border-gray-700 font-bold text-gray-900 dark:text-white hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors cursor-not-allowed opacity-70" disabled>
          Próximamente
        </button>
      </div>

      <!-- Premium Plan -->
      <div class="glass-card p-8 rounded-3xl border-2 border-primary relative flex flex-col transform md:-translate-y-4 shadow-2xl shadow-primary/10">
        <div class="absolute top-0 right-0 bg-primary text-white text-xs font-bold px-3 py-1 rounded-bl-xl rounded-tr-lg flex items-center gap-1">
            <Star className="w-3 h-3 fill-current" />
            Recomendado
        </div>

        <div class="mb-6">
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white">Premium Familiar</h3>
          <div class="text-4xl font-extrabold mt-2 text-gray-900 dark:text-white">Próximamente</div>
          <p class="text-gray-500 mt-2">Control total y seguridad avanzada.</p>
        </div>

        <ul class="space-y-4 mb-8 flex-1">
          {[
            { text: "Perfiles Ilimitados", check: true },
            { text: "Medicamentos Ilimitados", check: true },
            { text: "Notificaciones Críticas (Persistentes)", check: true },
            { text: "Smart Scheduler Avanzado (Flex ±1h)", check: true },
            { text: "Modo Discreto", check: true },
            { text: "Exportación PDF Profesional", check: true },
            { text: "Backup Encriptado", check: true },
          ].map(feature => (
            <li class="flex items-center gap-3">
              <div class="w-5 h-5 rounded-full bg-primary/10 text-primary flex items-center justify-center">
                <Check className="w-3 h-3" />
              </div>
              <span class="text-sm font-bold text-gray-800 dark:text-gray-200">{feature.text}</span>
            </li>
          ))}
        </ul>

        <button class="w-full py-4 rounded-xl bg-primary text-white font-bold hover:shadow-lg hover:shadow-primary/30 transition-all btn-shimmer">
          Ver características Premium
        </button>
      </div>
    </div>
  </div>
</section>

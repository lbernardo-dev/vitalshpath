---
import {
    Check,
    X,
    Smartphone,
    Zap,
    Star,
    Shield,
    Layout as LayoutIcon,
    Bell,
    Repeat,
    BarChart3,
    Globe,
    Heart,
    Layers,
    Infinity,
    Calendar,
} from "lucide-react";
import { type Lang } from "../../i18n/ui-locales";
import { useTranslations } from "../../i18n";

interface Props {
    lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const premiumFeatures = [
    { key: "unlimited_profiles", icon: Infinity },
    { key: "smart_scheduler_ia", icon: Zap },
    { key: "advanced_analytics", icon: BarChart3 },
    { key: "health_reports", icon: Layers },
    { key: "icloud_backup", icon: Shield },
    { key: "all_themes", icon: LayoutIcon },
    { key: "advanced_notifications", icon: Bell },
    { key: "export_pdf_csv", icon: Heart },
];

const comparison = [
    { label: t("pricing.features.basic_profiles"), free: "1", premium: "∞" },
    { label: t("pricing.features.basic_medications"), free: "3", premium: "∞" },
    {
        label: t("pricing.features.unlimited_treatments"),
        free: "1",
        premium: "∞",
    },
    {
        label: t("pricing.features.appointments_limit"),
        free: "3",
        premium: "∞",
    },
    { label: t("pricing.features.locations_limit"), free: "2", premium: "∞" },
    { label: t("pricing.features.insurance_limit"), free: "1", premium: "∞" },
    { label: t("pricing.features.wellness_score"), free: true, premium: true },
    {
        label: t("pricing.features.wellness_details"),
        free: false,
        premium: true,
    },
    { label: t("pricing.features.smart_scheduler"), free: true, premium: true },
    {
        label: t("pricing.features.smart_scheduler_ia"),
        free: false,
        premium: true,
    },
];
---

<section
    id="pricing"
    class="py-24 relative overflow-hidden bg-white dark:bg-black"
>
    <!-- Ambient background -->
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full -z-10">
        <div
            class="absolute top-0 left-1/4 w-96 h-96 bg-blue-400/10 dark:bg-blue-600/5 rounded-full blur-[100px]"
        >
        </div>
        <div
            class="absolute bottom-0 right-1/4 w-96 h-96 bg-purple-400/10 dark:bg-purple-600/5 rounded-full blur-[100px]"
        >
        </div>
    </div>

    <div class="container mx-auto px-6">
        <div class="text-center max-w-3xl mx-auto mb-16">
            <h2
                class="text-4xl md:text-5xl font-black text-gray-900 dark:text-white mb-6 tracking-tight"
            >
                {t("pricing.title")}
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-400">
                {t("pricing.subtitle")}
            </p>
        </div>

        <div class="grid lg:grid-cols-12 gap-12 max-w-7xl mx-auto">
            <!-- Left Side: Plans -->
            <div
                class="lg:col-span-12 grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16"
            >
                <!-- Free Plan Card -->
                <div
                    class="p-8 rounded-[2.5rem] bg-gray-50 dark:bg-gray-900/50 border border-gray-100 dark:border-gray-800 flex flex-col"
                >
                    <div class="mb-6">
                        <span
                            class="text-xs font-bold uppercase tracking-widest text-gray-400 dark:text-gray-500 mb-2 block"
                            >{t("pricing.free.title")}</span
                        >
                        <div class="flex items-baseline gap-1">
                            <span
                                class="text-4xl font-black text-gray-900 dark:text-white"
                                >€0</span
                            >
                            <span
                                class="text-gray-500 dark:text-gray-400 text-sm"
                                >{t("pricing.free.period")}</span
                            >
                        </div>
                    </div>
                    <p
                        class="text-sm text-gray-600 dark:text-gray-400 mb-8 flex-1"
                    >
                        {t("pricing.free.description")}
                    </p>
                    <button
                        disabled
                        class="w-full py-4 px-6 bg-gray-200 dark:bg-gray-800 text-gray-400 dark:text-gray-600 font-bold rounded-2xl cursor-not-allowed transition-all"
                    >
                        {t("pricing.cta_alt")}
                    </button>
                </div>

                <!-- Premium Plans -->
                <div
                    class="lg:col-span-3 p-1 rounded-[3rem] bg-gradient-to-br from-blue-500 via-purple-500 to-pink-500 shadow-2xl"
                >
                    <div
                        class="h-full w-full bg-white dark:bg-gray-950 rounded-[2.9rem] p-8 md:p-10"
                    >
                        <div class="flex flex-col lg:flex-row gap-12">
                            <!-- Pricing & Selection -->
                            <div class="lg:w-1/3">
                                <span
                                    class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-blue-100 dark:bg-blue-900/40 text-blue-600 dark:text-blue-400 text-[10px] font-black uppercase tracking-wider mb-4"
                                >
                                    <Star class="w-3 h-3 fill-current" />
                                    {t("pricing.annual.badge")}
                                </span>
                                <h3
                                    class="text-3xl font-black text-gray-900 dark:text-white mb-6"
                                >
                                    VitalsPath Premium
                                </h3>

                                <div class="space-y-3 mb-8">
                                    <button
                                        class="plan-toggle w-full p-4 rounded-2xl border-2 transition-all text-left flex justify-between items-center group"
                                        data-price="€4.99"
                                        data-period="/mes"
                                        data-active="false"
                                    >
                                        <div>
                                            <p
                                                class="font-bold text-gray-900 dark:text-white"
                                            >
                                                {t("pricing.monthly.title")}
                                            </p>
                                            <p class="text-xs text-gray-500">
                                                {
                                                    t(
                                                        "pricing.monthly.description"
                                                    )
                                                }
                                            </p>
                                        </div>
                                        <div class="text-right">
                                            <p
                                                class="font-black text-gray-900 dark:text-white"
                                            >
                                                €4.99
                                            </p>
                                        </div>
                                    </button>

                                    <button
                                        class="plan-toggle w-full p-4 rounded-2xl border-2 border-blue-500 bg-blue-50/50 dark:bg-blue-900/10 transition-all text-left flex justify-between items-center group shadow-md"
                                        data-price="€39.99"
                                        data-period="/año"
                                        data-active="true"
                                    >
                                        <div>
                                            <p
                                                class="font-bold text-gray-900 dark:text-white"
                                            >
                                                {t("pricing.annual.title")}
                                            </p>
                                            <p class="text-xs text-gray-500">
                                                {
                                                    t(
                                                        "pricing.annual.description"
                                                    )
                                                }
                                            </p>
                                        </div>
                                        <div class="text-right">
                                            <p
                                                class="font-black text-gray-900 dark:text-white"
                                            >
                                                €39.99
                                            </p>
                                            <span
                                                class="text-[10px] bg-green-500 text-white px-1.5 py-0.5 rounded-md font-bold"
                                                >-33%</span
                                            >
                                        </div>
                                    </button>

                                    <button
                                        class="plan-toggle w-full p-4 rounded-2xl border-2 transition-all text-left flex justify-between items-center group"
                                        data-price="€149.99"
                                        data-period="One-time"
                                        data-active="false"
                                    >
                                        <div>
                                            <p
                                                class="font-bold text-gray-900 dark:text-white"
                                            >
                                                {t("pricing.lifetime.title")}
                                            </p>
                                            <p class="text-xs text-gray-500">
                                                {
                                                    t(
                                                        "pricing.lifetime.description"
                                                    )
                                                }
                                            </p>
                                        </div>
                                        <div class="text-right">
                                            <p
                                                class="font-black text-gray-900 dark:text-white"
                                            >
                                                €149.99
                                            </p>
                                        </div>
                                    </button>
                                </div>

                                <div
                                    class="mb-8 p-4 bg-gray-50 dark:bg-gray-900 rounded-2xl border border-gray-100 dark:border-gray-800"
                                >
                                    <div class="flex items-baseline gap-2">
                                        <span
                                            id="premium-price-display"
                                            class="text-4xl font-black text-gray-900 dark:text-white tracking-tight"
                                            >€39.99</span
                                        >
                                        <span
                                            id="premium-period-display"
                                            class="text-gray-500 text-sm"
                                            >/año</span
                                        >
                                    </div>
                                </div>

                                <button
                                    disabled
                                    class="w-full py-4 px-6 bg-gray-900 dark:bg-white text-white dark:text-gray-900 font-black rounded-2xl hover:opacity-90 transition-all shadow-xl shadow-blue-500/20 cursor-not-allowed"
                                >
                                    {t("pricing.cta_alt")}
                                </button>
                            </div>

                            <!-- Exclusive Features Grid -->
                            <div
                                class="lg:w-2/3 border-l border-gray-100 dark:border-gray-800 lg:pl-12"
                            >
                                <h4
                                    class="text-sm font-black uppercase tracking-widest text-gray-400 dark:text-gray-500 mb-8"
                                >
                                    {t("pricing.premium.features_title")}
                                </h4>
                                <div
                                    class="grid sm:grid-cols-2 gap-x-8 gap-y-6"
                                >
                                    {
                                        premiumFeatures.map((f) => (
                                            <div class="flex items-start gap-4">
                                                <div class="w-10 h-10 rounded-xl bg-blue-50 dark:bg-blue-900/20 flex items-center justify-center text-blue-500 shrink-0">
                                                    <f.icon class="w-5 h-5" />
                                                </div>
                                                <div>
                                                    <p class="text-sm font-bold text-gray-900 dark:text-white mb-1 leading-tight">
                                                        {t(
                                                            `pricing.features.${f.key}`
                                                        )}
                                                    </p>
                                                    <p class="text-xs text-gray-500 dark:text-gray-500 leading-relaxed">
                                                        Acceso ilimitado y
                                                        optimización avanzada.
                                                    </p>
                                                </div>
                                            </div>
                                        ))
                                    }
                                </div>

                                <div
                                    class="mt-8 p-6 bg-gray-50 dark:bg-gray-900/50 rounded-3xl border border-dashed border-gray-200 dark:border-gray-700"
                                >
                                    <div
                                        class="flex items-center gap-3 text-blue-500 mb-2"
                                    >
                                        <Shield class="w-5 h-5" />
                                        <span class="text-sm font-bold"
                                            >Privacidad 100% On-Device</span
                                        >
                                    </div>
                                    <p
                                        class="text-xs text-gray-500 leading-relaxed"
                                    >
                                        Tus datos de salud nunca salen de tu
                                        iPhone. VitalsPath utiliza el iCloud
                                        Keychain y bases de datos locales
                                        cifradas para protegerte.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Full Comparison Table -->
            <div class="lg:col-span-12">
                <div
                    class="bg-white dark:bg-gray-950 rounded-[3rem] border border-gray-100 dark:border-gray-800 shadow-xl overflow-hidden"
                >
                    <div
                        class="p-8 md:p-10 border-b border-gray-100 dark:border-gray-800"
                    >
                        <h3
                            class="text-2xl font-black text-gray-900 dark:text-white mb-2"
                        >
                            Compara los planes
                        </h3>
                        <p class="text-gray-500 text-sm">
                            Todo lo que necesitas saber sobre los límites
                            dinámicos.
                        </p>
                    </div>

                    <div class="overflow-x-auto">
                        <table class="w-full text-left border-collapse">
                            <thead>
                                <tr class="bg-gray-50/50 dark:bg-gray-900/30">
                                    <th
                                        class="py-6 px-10 text-xs font-black uppercase tracking-widest text-gray-400 dark:text-gray-500"
                                        >Funcionalidad</th
                                    >
                                    <th
                                        class="py-6 px-10 text-center text-xs font-black uppercase tracking-widest text-gray-400 dark:text-gray-500"
                                        >Gratis</th
                                    >
                                    <th
                                        class="py-6 px-10 text-center text-xs font-black uppercase tracking-widest text-blue-500"
                                        >Premium</th
                                    >
                                </tr>
                            </thead>
                            <tbody
                                class="divide-y divide-gray-100 dark:divide-gray-800"
                            >
                                {
                                    comparison.map((row) => (
                                        <tr class="hover:bg-gray-50/50 dark:hover:bg-gray-900/20 transition-colors">
                                            <td class="py-6 px-10 text-sm font-bold text-gray-900 dark:text-white">
                                                {row.label}
                                            </td>
                                            <td class="py-6 px-10 text-center">
                                                {typeof row.free ===
                                                "string" ? (
                                                    <span class="text-sm text-gray-600 dark:text-gray-400 font-medium">
                                                        {row.free}
                                                    </span>
                                                ) : row.free ? (
                                                    <Check class="w-5 h-5 text-green-500 mx-auto" />
                                                ) : (
                                                    <X class="w-5 h-5 text-gray-300 dark:text-gray-700 mx-auto" />
                                                )}
                                            </td>
                                            <td class="py-6 px-10 text-center">
                                                {typeof row.premium ===
                                                "string" ? (
                                                    <span class="text-sm text-blue-500 font-bold">
                                                        {row.premium}
                                                    </span>
                                                ) : row.premium ? (
                                                    <Check class="w-5 h-5 text-blue-500 mx-auto" />
                                                ) : (
                                                    <X class="w-5 h-5 text-gray-300 dark:text-gray-700 mx-auto" />
                                                )}
                                            </td>
                                        </tr>
                                    ))
                                }
                            </tbody>
                        </table>
                    </div>

                    <div
                        class="p-8 bg-gray-50/50 dark:bg-gray-900/30 text-center"
                    >
                        <p class="text-xs text-gray-500 italic">
                            * Los límites son dinámicos y pueden ser
                            configurados de forma remota para adaptarse a las
                            necesidades de la comunidad.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    const toggles = document.querySelectorAll(".plan-toggle");
    const priceDisplay = document.getElementById("premium-price-display");
    const periodDisplay = document.getElementById("premium-period-display");

    toggles.forEach((toggle) => {
        toggle.addEventListener("click", () => {
            // Remove active classes
            toggles.forEach((t) => {
                t.classList.remove(
                    "border-blue-500",
                    "bg-blue-50/50",
                    "dark:bg-blue-900/10",
                    "shadow-md"
                );
                t.classList.add("border-transparent");
            });

            // Add active classes
            toggle.classList.remove("border-transparent");
            toggle.classList.add(
                "border-blue-500",
                "bg-blue-50/50",
                "dark:bg-blue-900/10",
                "shadow-md"
            );

            // Update displays
            if (priceDisplay && periodDisplay) {
                const price = toggle.getAttribute("data-price");
                const period = toggle.getAttribute("data-period");

                priceDisplay.textContent = price;
                periodDisplay.textContent = period;

                // Animation trigger
                priceDisplay.classList.add("scale-110", "text-blue-500");
                setTimeout(() => {
                    priceDisplay.classList.remove("scale-110", "text-blue-500");
                }, 200);
            }
        });
    });
</script>

<style>
    .plan-toggle {
        @apply border-gray-100 dark:border-gray-800;
    }
</style>

---
import { Check } from "lucide-react";
import { useTranslations } from "../../i18n/ui";

const { lang = 'es' } = Astro.props;
const t = useTranslations(lang);
---

<section id="pricing" class="py-24 relative overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-5xl font-extrabold mb-4 text-gray-900 dark:text-white">{t('pricing.title')}</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      
      <!-- Free Plan -->
      <div class="glass-card p-8 flex flex-col hover:scale-105 transition-transform duration-300">
        <div class="mb-6">
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white">{t('pricing.free.title')}</h3>
          <p class="text-gray-500">{t('pricing.free.desc')}</p>
        </div>
        <div class="mb-8">
          <span class="text-5xl font-bold text-gray-900 dark:text-white">{t('pricing.free.price')}</span>
          <span class="text-gray-500">{t('pricing.month')}</span>
        </div>
        <ul class="space-y-4 mb-8 flex-1">
          <li class="flex items-center gap-3">
            <div class="w-6 h-6 rounded-full bg-green-100 dark:bg-green-900/30 flex items-center justify-center text-green-600">
              <Check className="w-4 h-4" />
            </div>
            <span class="text-gray-600 dark:text-gray-300">{t('pricing.free.feat1')}</span>
          </li>
          <li class="flex items-center gap-3">
            <div class="w-6 h-6 rounded-full bg-green-100 dark:bg-green-900/30 flex items-center justify-center text-green-600">
              <Check className="w-4 h-4" />
            </div>
            <span class="text-gray-600 dark:text-gray-300">{t('pricing.free.feat2')}</span>
          </li>
          <li class="flex items-center gap-3">
            <div class="w-6 h-6 rounded-full bg-green-100 dark:bg-green-900/30 flex items-center justify-center text-green-600">
              <Check className="w-4 h-4" />
            </div>
            <span class="text-gray-600 dark:text-gray-300">{t('pricing.free.feat3')}</span>
          </li>
        </ul>
        <button class="w-full py-3 rounded-xl border border-gray-200 dark:border-white/10 font-bold hover:bg-gray-50 dark:hover:bg-white/5 transition-colors">
          {t('pricing.free.cta')}
        </button>
      </div>

      <!-- Premium Plan -->
      <div class="glass-card p-8 flex flex-col relative border-primary/50 shadow-2xl hover:scale-105 transition-transform duration-300">
        <div class="absolute top-0 right-0 bg-primary text-white text-xs font-bold px-3 py-1 rounded-bl-xl">
          BEST VALUE
        </div>
        <div class="mb-6">
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white">{t('pricing.premium.title')}</h3>
          <p class="text-gray-500">{t('pricing.premium.desc')}</p>
        </div>
        <div class="mb-8">
          <span class="text-5xl font-bold text-gray-900 dark:text-white">{t('pricing.premium.price')}</span>
          <span class="text-gray-500">{t('pricing.month')}</span>
        </div>
        <ul class="space-y-4 mb-8 flex-1">
          <li class="flex items-center gap-3">
            <div class="w-6 h-6 rounded-full bg-primary/20 flex items-center justify-center text-primary">
              <Check className="w-4 h-4" />
            </div>
            <span class="text-gray-600 dark:text-gray-300 font-medium">{t('pricing.premium.feat1')}</span>
          </li>
          <li class="flex items-center gap-3">
            <div class="w-6 h-6 rounded-full bg-primary/20 flex items-center justify-center text-primary">
              <Check className="w-4 h-4" />
            </div>
            <span class="text-gray-600 dark:text-gray-300 font-medium">{t('pricing.premium.feat2')}</span>
          </li>
          <li class="flex items-center gap-3">
            <div class="w-6 h-6 rounded-full bg-primary/20 flex items-center justify-center text-primary">
              <Check className="w-4 h-4" />
            </div>
            <span class="text-gray-600 dark:text-gray-300 font-medium">{t('pricing.premium.feat3')}</span>
          </li>
        </ul>
        <button class="w-full py-3 rounded-xl bg-primary hover:bg-primary-dark text-white font-bold shadow-lg transition-all">
          {t('pricing.premium.cta')}
        </button>
      </div>

    </div>
  </div>
</section>

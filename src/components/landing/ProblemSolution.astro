---
import { XCircle, CheckCircle, Smartphone, Pill, FileText } from "lucide-react";
import { useTranslations } from "../../i18n/ui";

const { lang = 'es' } = Astro.props;
const t = useTranslations(lang);
---

<section class="py-24 bg-gray-50 dark:bg-white/5 relative overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    
    <div class="text-center mb-20">
      <h2 class="text-3xl md:text-5xl font-extrabold mb-6 text-gray-900 dark:text-white">
        {t('problem.title')}
      </h2>
      <p class="text-xl text-gray-500 max-w-2xl mx-auto">
        {t('problem.subtitle')}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      
      <!-- Problem 1 -->
      <div class="glass-card p-8 group hover:bg-red-50/50 dark:hover:bg-red-900/10 border-red-100 dark:border-red-900/20 transition-colors">
        <div class="w-14 h-14 bg-red-100 dark:bg-red-900/30 rounded-2xl flex items-center justify-center text-red-500 mb-6 group-hover:scale-110 transition-transform">
          <Pill className="w-7 h-7" />
        </div>
        <h3 class="text-xl font-bold mb-3 text-gray-900 dark:text-white">{t('problem.1.title')}</h3>
        <p class="text-gray-500 leading-relaxed">
          {t('problem.1.desc')}
        </p>
      </div>

      <!-- Problem 2 -->
      <div class="glass-card p-8 group hover:bg-orange-50/50 dark:hover:bg-orange-900/10 border-orange-100 dark:border-orange-900/20 transition-colors">
        <div class="w-14 h-14 bg-orange-100 dark:bg-orange-900/30 rounded-2xl flex items-center justify-center text-orange-500 mb-6 group-hover:scale-110 transition-transform">
          <FileText className="w-7 h-7" />
        </div>
        <h3 class="text-xl font-bold mb-3 text-gray-900 dark:text-white">{t('problem.2.title')}</h3>
        <p class="text-gray-500 leading-relaxed">
          {t('problem.2.desc')}
        </p>
      </div>

       <!-- Problem 3 -->
       <div class="glass-card p-8 group hover:bg-blue-50/50 dark:hover:bg-blue-900/10 border-blue-100 dark:border-blue-900/20 transition-colors">
        <div class="w-14 h-14 bg-blue-100 dark:bg-blue-900/30 rounded-2xl flex items-center justify-center text-blue-500 mb-6 group-hover:scale-110 transition-transform">
          <Smartphone className="w-7 h-7" />
        </div>
        <h3 class="text-xl font-bold mb-3 text-gray-900 dark:text-white">{t('problem.3.title')}</h3>
        <p class="text-gray-500 leading-relaxed">
          {t('problem.3.desc')}
        </p>
      </div>

    </div>

  </div>
</section>

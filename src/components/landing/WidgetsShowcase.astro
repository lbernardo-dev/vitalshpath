<section class="py-24 relative overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-12 text-center">
    <h2 class="text-3xl md:text-5xl font-extrabold mb-4 text-gray-900 dark:text-white">
      Tu salud siempre visible
    </h2>
    <p class="text-xl text-gray-500">
      12 Widgets personalizables para tu pantalla de inicio.
    </p>
  </div>

  <!-- Infinite Scroll Carousel Simulation (CSS) -->
  <div class="relative w-full overflow-hidden py-10">
    <div class="flex gap-8 animate-scroll whitespace-nowrap px-4 w-max">
        <!-- Mock Widgets -->
        {[1,2,3,4,5,6].map(i => (
            <div class={`inline-block w-40 h-40 md:w-48 md:h-48 rounded-3xl shadow-xl border border-white/20 relative overflow-hidden transform hover:scale-105 transition-transform duration-300 ${i % 2 === 0 ? 'bg-gray-900 text-white' : 'bg-white text-gray-900'}`}>
                <div class="p-4 flex flex-col h-full justify-between">
                    <div class="flex justify-between items-start">
                        <div class="w-8 h-8 rounded-full bg-primary/20"></div>
                        <span class="text-xs font-bold opacity-50">Vitals</span>
                    </div>
                    <div>
                        <div class="text-2xl font-bold">98%</div>
                        <div class="text-xs opacity-70">Adherencia</div>
                    </div>
                </div>
            </div>
        ))}
         <!-- Duplicate for loop -->
         {[1,2,3,4,5,6].map(i => (
            <div class={`inline-block w-40 h-40 md:w-48 md:h-48 rounded-3xl shadow-xl border border-white/20 relative overflow-hidden transform hover:scale-105 transition-transform duration-300 ${i % 3 === 0 ? 'bg-primary text-white' : 'bg-gray-100 dark:bg-gray-800 text-gray-500'}`}>
                <div class="p-4 flex flex-col h-full justify-between">
                    <div class="flex justify-between items-start">
                         <div class="w-8 h-8 rounded-full bg-white/20"></div>
                    </div>
                     <div class="space-y-1">
                        <div class="h-2 bg-current opacity-20 rounded full w-3/4"></div>
                        <div class="h-2 bg-current opacity-20 rounded full w-1/2"></div>
                    </div>
                </div>
            </div>
        ))}
    </div>
    
    <!-- Fade edges -->
    <div class="absolute inset-y-0 left-0 w-20 bg-gradient-to-r from-bg-light dark:from-bg-dark to-transparent z-10"></div>
    <div class="absolute inset-y-0 right-0 w-20 bg-gradient-to-l from-bg-light dark:from-bg-dark to-transparent z-10"></div>
  </div>
</section>

<style>
@keyframes scroll {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}
.animate-scroll {
  animation: scroll 30s linear infinite;
}
.animate-scroll:hover {
  animation-play-state: paused;
}
</style>

---
import { Syringe, CalendarDays, Stethoscope } from "lucide-react";
import { type Lang } from "../../i18n/ui-locales";
import { useTranslations } from "../../i18n";
import { Image } from "astro:assets";
import screenMedications from "../../assets/images/screens/screen-04-medications.PNG";
import screenWellness from "../../assets/images/screens/screen-18-wellness.PNG";
import screenSymptoms from "../../assets/images/screens/screen-13-symptoms.PNG";

interface Props {
    lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section
    id="deep-features"
    class="py-12 md:py-24 relative bg-gray-50 dark:bg-gray-900/50"
>
    <div class="container mx-auto px-6">
        <div class="text-center max-w-3xl mx-auto mb-20">
            <span
                class="inline-block px-4 py-2 rounded-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 text-sm font-semibold mb-4 text-purple-500"
            >
                {t("deepFeatures.badge")}
            </span>
            <h2
                class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-6"
            >
                {t("deepFeatures.title")}<br />
                <span
                    class="bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 bg-clip-text text-transparent"
                    >{t("deepFeatures.titleHighlight")}</span
                >
            </h2>
        </div>

        <div
            class="flex flex-col lg:flex-row items-center gap-12 lg:gap-16 mb-20"
        >
            <div class="flex-1 order-2 lg:order-1">
                <div class="flex items-center gap-3 mb-4">
                    <div
                        class="w-10 h-10 rounded-xl bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center"
                    >
                        <Syringe className="w-5 h-5 text-blue-600" />
                    </div>
                    <span
                        class="text-sm font-semibold text-blue-600 uppercase tracking-wide"
                        >{t("deepFeatures.medication.badge")}</span
                    >
                </div>
                <h3
                    class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-4"
                >
                    {t("deepFeatures.medication.title")}
                </h3>
                <p class="text-gray-600 dark:text-gray-400 text-lg mb-6">
                    {t("deepFeatures.medication.description")}
                </p>
                <ul class="space-y-3">
                    {
                        [0, 1, 2].map((i) => (
                            <li class="flex items-center gap-3 text-gray-900 dark:text-white">
                                <div class="w-5 h-5 rounded-full bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center shrink-0">
                                    <svg
                                        class="w-3 h-3 text-blue-600"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                            clip-rule="evenodd"
                                        />
                                    </svg>
                                </div>
                                <span>
                                    {t(`deepFeatures.medication.features.${i}`)}
                                </span>
                            </li>
                        ))
                    }
                </ul>
            </div>
            <div class="flex-1 order-1 lg:order-2">
                <div
                    class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 p-4 rounded-3xl shadow-lg"
                >
                    <div
                        class="aspect-[4/5] rounded-2xl overflow-hidden bg-gray-100 dark:bg-gray-900"
                    >
                        <Image
                            src={screenMedications}
                            alt={t("gallery.labels.medications")}
                            class="w-full h-full object-cover"
                            width={400}
                        />
                    </div>
                </div>
            </div>
        </div>

        <div
            class="flex flex-col lg:flex-row items-center gap-12 lg:gap-16 mb-20"
        >
            <div class="flex-1">
                <div
                    class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 p-4 rounded-3xl shadow-lg"
                >
                    <div
                        class="aspect-[4/5] rounded-2xl overflow-hidden bg-gray-100 dark:bg-gray-900"
                    >
                        <Image
                            src={screenWellness}
                            alt={t("gallery.labels.calendarWeek")}
                            class="w-full h-full object-cover"
                            width={400}
                        />
                    </div>
                </div>
            </div>
            <div class="flex-1">
                <div class="flex items-center gap-3 mb-4">
                    <div
                        class="w-10 h-10 rounded-xl bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center"
                    >
                        <CalendarDays className="w-5 h-5 text-purple-600" />
                    </div>
                    <span
                        class="text-sm font-semibold text-purple-600 uppercase tracking-wide"
                        >{t("deepFeatures.calendar.badge")}</span
                    >
                </div>
                <h3
                    class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-4"
                >
                    {t("deepFeatures.calendar.title")}
                </h3>
                <p class="text-gray-600 dark:text-gray-400 text-lg mb-6">
                    {t("deepFeatures.calendar.description")}
                </p>
                <ul class="space-y-3">
                    {
                        [0, 1, 2].map((i) => (
                            <li class="flex items-center gap-3 text-gray-900 dark:text-white">
                                <div class="w-5 h-5 rounded-full bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center shrink-0">
                                    <svg
                                        class="w-3 h-3 text-purple-600"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                            clip-rule="evenodd"
                                        />
                                    </svg>
                                </div>
                                <span>
                                    {t(`deepFeatures.calendar.features.${i}`)}
                                </span>
                            </li>
                        ))
                    }
                </ul>
            </div>
        </div>

        <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-16">
            <div class="flex-1 order-2 lg:order-1">
                <div class="flex items-center gap-3 mb-4">
                    <div
                        class="w-10 h-10 rounded-xl bg-teal-100 dark:bg-teal-900/30 flex items-center justify-center"
                    >
                        <Stethoscope className="w-5 h-5 text-teal-600" />
                    </div>
                    <span
                        class="text-sm font-semibold text-teal-600 uppercase tracking-wide"
                        >{t("deepFeatures.symptoms.badge")}</span
                    >
                </div>
                <h3
                    class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-4"
                >
                    {t("deepFeatures.symptoms.title")}
                </h3>
                <p class="text-gray-600 dark:text-gray-400 text-lg mb-6">
                    {t("deepFeatures.symptoms.description")}
                </p>
                <ul class="space-y-3">
                    {
                        [0, 1, 2].map((i) => (
                            <li class="flex items-center gap-3 text-gray-900 dark:text-white">
                                <div class="w-5 h-5 rounded-full bg-teal-100 dark:bg-teal-900/30 flex items-center justify-center shrink-0">
                                    <svg
                                        class="w-3 h-3 text-teal-600"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                            clip-rule="evenodd"
                                        />
                                    </svg>
                                </div>
                                <span>
                                    {t(`deepFeatures.symptoms.features.${i}`)}
                                </span>
                            </li>
                        ))
                    }
                </ul>
            </div>
            <div class="flex-1 order-1 lg:order-2">
                <div
                    class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 p-4 rounded-3xl shadow-lg"
                >
                    <div
                        class="aspect-[4/5] rounded-2xl overflow-hidden bg-gray-100 dark:bg-gray-900"
                    >
                        <Image
                            src={screenSymptoms}
                            alt={t("gallery.labels.symptoms")}
                            class="w-full h-full object-cover"
                            width={400}
                        />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>section>

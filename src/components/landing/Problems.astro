---
import {
    AlertCircle,
    Calendar,
    Clock,
    HeartCrack,
    Users,
    FileQuestion,
    ArrowRight,
} from "lucide-react";
import { type Lang } from "../../i18n/ui-locales";
import { useTranslations } from "../../i18n";

interface Props {
    lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section id="problems" class="py-12 md:py-24 relative bg-gray-50 dark:bg-gray-900/50">
    <div class="container mx-auto px-6 relative z-10">
        <div class="text-center max-w-3xl mx-auto mb-16">
            <span
                class="inline-block px-4 py-2 rounded-full bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 text-sm font-semibold mb-4 text-red-500"
            >
                {t("problems.badge")}
            </span>
            <h2
                class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-6"
            >
                {t("problems.title")}<br />{t("problems.titleLine2")}
            </h2>
            <p class="text-lg text-gray-600 dark:text-gray-400">
                {t("problems.subtitle")}
            </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
            <div
                class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 p-6 rounded-3xl shadow-sm hover:shadow-lg transition-shadow"
            >
                <div class="flex items-start gap-4">
                    <div
                        class="w-12 h-12 rounded-2xl bg-red-100 dark:bg-red-900/30 flex items-center justify-center shrink-0"
                    >
                        <Clock className="w-6 h-6 text-red-500" />
                    </div>
                    <div>
                        <h3
                            class="font-semibold text-gray-900 dark:text-white mb-2"
                        >
                            {t("problems.items.medication.title")}
                        </h3>
                        <p class="text-sm text-gray-600 dark:text-gray-400">
                            {t("problems.items.medication.description")}
                        </p>
                    </div>
                </div>
            </div>

            <div
                class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 p-6 rounded-3xl shadow-sm hover:shadow-lg transition-shadow"
            >
                <div class="flex items-start gap-4">
                    <div
                        class="w-12 h-12 rounded-2xl bg-orange-100 dark:bg-orange-900/30 flex items-center justify-center shrink-0"
                    >
                        <Users className="w-6 h-6 text-orange-500" />
                    </div>
                    <div>
                        <h3
                            class="font-semibold text-gray-900 dark:text-white mb-2"
                        >
                            {t("problems.items.profiles.title")}
                        </h3>
                        <p class="text-sm text-gray-600 dark:text-gray-400">
                            {t("problems.items.profiles.description")}
                        </p>
                    </div>
                </div>
            </div>

            <div
                class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 p-6 rounded-3xl shadow-sm hover:shadow-lg transition-shadow"
            >
                <div class="flex items-start gap-4">
                    <div
                        class="w-12 h-12 rounded-2xl bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center shrink-0"
                    >
                        <Calendar className="w-6 h-6 text-purple-500" />
                    </div>
                    <div>
                        <h3
                            class="font-semibold text-gray-900 dark:text-white mb-2"
                        >
                            {t("problems.items.appointments.title")}
                        </h3>
                        <p class="text-sm text-gray-600 dark:text-gray-400">
                            {t("problems.items.appointments.description")}
                        </p>
                    </div>
                </div>
            </div>

            <div
                class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 p-6 rounded-3xl shadow-sm hover:shadow-lg transition-shadow"
            >
                <div class="flex items-start gap-4">
                    <div
                        class="w-12 h-12 rounded-2xl bg-pink-100 dark:bg-pink-900/30 flex items-center justify-center shrink-0"
                    >
                        <HeartCrack className="w-6 h-6 text-pink-500" />
                    </div>
                    <div>
                        <h3
                            class="font-semibold text-gray-900 dark:text-white mb-2"
                        >
                            {t("problems.items.symptoms.title")}
                        </h3>
                        <p class="text-sm text-gray-600 dark:text-gray-400">
                            {t("problems.items.symptoms.description")}
                        </p>
                    </div>
                </div>
            </div>

            <div
                class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 p-6 rounded-3xl shadow-sm hover:shadow-lg transition-shadow"
            >
                <div class="flex items-start gap-4">
                    <div
                        class="w-12 h-12 rounded-2xl bg-amber-100 dark:bg-amber-900/30 flex items-center justify-center shrink-0"
                    >
                        <AlertCircle className="w-6 h-6 text-amber-500" />
                    </div>
                    <div>
                        <h3
                            class="font-semibold text-gray-900 dark:text-white mb-2"
                        >
                            {t("problems.items.interactions.title")}
                        </h3>
                        <p class="text-sm text-gray-600 dark:text-gray-400">
                            {t("problems.items.interactions.description")}
                        </p>
                    </div>
                </div>
            </div>

            <div
                class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 p-6 rounded-3xl shadow-sm hover:shadow-lg transition-shadow"
            >
                <div class="flex items-start gap-4">
                    <div
                        class="w-12 h-12 rounded-2xl bg-teal-100 dark:bg-teal-900/30 flex items-center justify-center shrink-0"
                    >
                        <FileQuestion className="w-6 h-6 text-teal-500" />
                    </div>
                    <div>
                        <h3
                            class="font-semibold text-gray-900 dark:text-white mb-2"
                        >
                            {t("problems.items.tasks.title")}
                        </h3>
                        <p class="text-sm text-gray-600 dark:text-gray-400">
                            {t("problems.items.tasks.description")}
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center">
            <div
                class="inline-flex items-center gap-3 px-6 py-3 rounded-full bg-gradient-to-r from-blue-500 to-purple-500 text-white font-semibold shadow-xl"
            >
                <span>{t("problems.cta")}</span>
                <ArrowRight className="w-5 h-5" />
            </div>
        </div>
    </div>
</section>
